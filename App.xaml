<Application x:Class="ObsMCLauncher.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design - WinUI 3 风格翡翠绿主题 -->
                <materialDesign:BundledTheme x:Name="MaterialTheme" BaseTheme="Dark" PrimaryColor="Teal" SecondaryColor="Green" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- 🎨 WinUI 3 风格配色方案 - 动态主题 -->
            
            <!-- 主题色 - 翡翠绿系（通用） -->
            <SolidColorBrush x:Key="PrimaryBrush" Color="#10B981"/>
            <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#059669"/>
            <SolidColorBrush x:Key="PrimaryLightBrush" Color="#34D399"/>
            <SolidColorBrush x:Key="SecondaryBrush" Color="#6EE7B7"/>
            <SolidColorBrush x:Key="AccentBrush" Color="#10B981"/>
            
            <!-- ===== 深色主题配色 ===== -->
            <SolidColorBrush x:Key="DarkBackgroundBrush" Color="#202020"/>
            <SolidColorBrush x:Key="DarkSurfaceBrush" Color="#2C2C2C"/>
            <SolidColorBrush x:Key="DarkSurfaceElevatedBrush" Color="#333333"/>
            <SolidColorBrush x:Key="DarkSurfaceHoverBrush" Color="#3A3A3A"/>
            <SolidColorBrush x:Key="DarkTextBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="DarkTextSecondaryBrush" Color="#ADADAD"/>
            <SolidColorBrush x:Key="DarkTextTertiaryBrush" Color="#8A8A8A"/>
            <SolidColorBrush x:Key="DarkBorderBrush" Color="#414141"/>
            <SolidColorBrush x:Key="DarkDividerBrush" Color="#2C2C2C"/>
            <SolidColorBrush x:Key="DarkInputBackgroundBrush" Color="#2C2C2C"/>
            <SolidColorBrush x:Key="DarkInputForegroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="DarkTooltipBackgroundBrush" Color="#1E1E1E"/>
            
            <!-- ===== 浅色主题配色 ===== -->
            <SolidColorBrush x:Key="LightBackgroundBrush" Color="#F5F5F5"/>
            <SolidColorBrush x:Key="LightSurfaceBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="LightSurfaceElevatedBrush" Color="#FAFAFA"/>
            <SolidColorBrush x:Key="LightSurfaceHoverBrush" Color="#F0F0F0"/>
            <SolidColorBrush x:Key="LightTextBrush" Color="#1F1F1F"/>
            <SolidColorBrush x:Key="LightTextSecondaryBrush" Color="#616161"/>
            <SolidColorBrush x:Key="LightTextTertiaryBrush" Color="#9E9E9E"/>
            <SolidColorBrush x:Key="LightBorderBrush" Color="#E0E0E0"/>
            <SolidColorBrush x:Key="LightDividerBrush" Color="#E5E5E5"/>
            <SolidColorBrush x:Key="LightInputBackgroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="LightInputForegroundBrush" Color="#1F1F1F"/>
            <SolidColorBrush x:Key="LightTooltipBackgroundBrush" Color="#FFFFFF"/>
            
            <!-- 动态主题颜色（默认深色） -->
            <SolidColorBrush x:Key="BackgroundBrush" Color="#202020"/>
            <SolidColorBrush x:Key="SurfaceBrush" Color="#2C2C2C"/>
            <SolidColorBrush x:Key="SurfaceElevatedBrush" Color="#333333"/>
            <SolidColorBrush x:Key="SurfaceHoverBrush" Color="#3A3A3A"/>
            <SolidColorBrush x:Key="TextBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="#ADADAD"/>
            <SolidColorBrush x:Key="TextTertiaryBrush" Color="#8A8A8A"/>
            <SolidColorBrush x:Key="TextDisabledBrush" Color="#6D6D6D"/>
            <SolidColorBrush x:Key="BorderBrush" Color="#414141"/>
            <SolidColorBrush x:Key="DividerBrush" Color="#2C2C2C"/>
            <SolidColorBrush x:Key="HoverBrush" Color="#3A3A3A"/>
            <SolidColorBrush x:Key="InputBackgroundBrush" Color="#2C2C2C"/>
            <SolidColorBrush x:Key="InputForegroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="TooltipBackgroundBrush" Color="#1E1E1E"/>
            <SolidColorBrush x:Key="TooltipForegroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="TooltipBorderBrush" Color="#414141"/>
            
            <!-- 层次色 -->
            <SolidColorBrush x:Key="LayerFillColorDefaultBrush" Color="#2C2C2C" Opacity="0.5"/>
            <SolidColorBrush x:Key="LayerOnMicaBaseAltFillColorDefaultBrush" Color="#333333" Opacity="0.7"/>
            
            <!-- WinUI 3 圆角半径 -->
            <CornerRadius x:Key="ControlCornerRadius">4</CornerRadius>
            <CornerRadius x:Key="OverlayCornerRadius">8</CornerRadius>
            <CornerRadius x:Key="CardCornerRadius">12</CornerRadius>
            
            <!-- 阴影颜色 -->
            <Color x:Key="ShadowColor">#000000</Color>
            
            <!-- ✨ 平滑动画时长 -->
            <Duration x:Key="AnimationDuration">0:0:0.2</Duration>
            <Duration x:Key="FastAnimationDuration">0:0:0.15</Duration>
            
            <!-- 📝 全局文字样式 - 统一字体粗细 -->
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <!-- 统一为正常粗细 -->
                <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
                <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            </Style>
            
            <!-- 🔘 按钮样式 - 添加悬停动画 -->
            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Trigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                   To="0.9" Duration="{StaticResource FastAnimationDuration}"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.EnterActions>
                        <Trigger.ExitActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                   To="1.0" Duration="{StaticResource FastAnimationDuration}"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.ExitActions>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <!-- 🔘 单选按钮样式 -->
            <Style TargetType="RadioButton" BasedOn="{StaticResource {x:Type RadioButton}}">
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>
            
            <!-- ☑️ 复选框样式 -->
            <Style TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>
            
            <!-- 📋 下拉框样式 - 动态主题 -->
            <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>
            
            <!-- 📋 下拉框项样式 - 动态主题 -->
            <Style TargetType="ComboBoxItem" BasedOn="{StaticResource {x:Type ComboBoxItem}}">
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <!-- ✍️ 文本框样式 -->
            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                <Setter Property="Foreground" Value="{DynamicResource InputForegroundBrush}"/>
                <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="CaretBrush" Value="{DynamicResource InputForegroundBrush}"/>
                <Setter Property="SelectionBrush" Value="{StaticResource PrimaryBrush}"/>
                <Setter Property="SelectionTextBrush" Value="White"/>
            </Style>
            
            <!-- 🔢 滑块样式 -->
            <Style TargetType="Slider" BasedOn="{StaticResource {x:Type Slider}}">
                <Setter Property="Cursor" Value="Hand"/>
            </Style>
            
            <!-- 💬 ToolTip 样式 - 动态主题 -->
            <Style TargetType="ToolTip">
                <Setter Property="Background" Value="{DynamicResource TooltipBackgroundBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource TooltipForegroundBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource TooltipBorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="8,6"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToolTip">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" 
                                                    BlurRadius="12" 
                                                    Opacity="0.4" 
                                                    ShadowDepth="2"
                                                    Direction="270"/>
                                </Border.Effect>
                                <ContentPresenter TextBlock.Foreground="{TemplateBinding Foreground}"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- 🎯 页面过渡动画 -->
            <Style TargetType="Page">
                <Style.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                               From="0" To="1" Duration="{StaticResource AnimationDuration}"/>
                                <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                  From="0,20,0,0" To="0,0,0,0" 
                                                  Duration="{StaticResource AnimationDuration}">
                                    <ThicknessAnimation.EasingFunction>
                                        <QuadraticEase EasingMode="EaseOut"/>
                                    </ThicknessAnimation.EasingFunction>
                                </ThicknessAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Style.Triggers>
            </Style>
            
            <!-- 🎴 WinUI 3 风格卡片样式 -->
            <Style x:Key="WinUICardStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource SurfaceElevatedBrush}"/>
                <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
                <Setter Property="Padding" Value="16"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="{StaticResource ShadowColor}" 
                                        BlurRadius="16" 
                                        Opacity="0.3" 
                                        ShadowDepth="4"
                                        Direction="270"/>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Trigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                  To="#3A3A3A" Duration="{StaticResource FastAnimationDuration}"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.EnterActions>
                        <Trigger.ExitActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                  To="#333333" Duration="{StaticResource FastAnimationDuration}"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.ExitActions>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <!-- 🎴 WinUI 3 风格表面样式 -->
            <Style x:Key="WinUISurfaceStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                <Setter Property="CornerRadius" Value="{StaticResource OverlayCornerRadius}"/>
                <Setter Property="Padding" Value="20"/>
            </Style>
            
            <!-- 🔘 WinUI 3 风格主按钮 -->
            <Style x:Key="WinUIPrimaryButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="16,10"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="4"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="#10B981" 
                                        BlurRadius="16" 
                                        Opacity="0.25" 
                                        ShadowDepth="0"/>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- 🔘 WinUI 3 风格次按钮 -->
            <Style x:Key="WinUISecondaryButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                <Setter Property="Padding" Value="16,10"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="4"/>
            </Style>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>


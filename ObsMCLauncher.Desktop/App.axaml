<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ObsMCLauncher.Desktop.App"
             xmlns:local="using:ObsMCLauncher.Desktop"
             xmlns:converters="using:ObsMCLauncher.Desktop.Converters"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Resources>
        <converters:BitmapAssetValueConverter x:Key="BitmapAssetValueConverter"/>
    </Application.Resources>

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://ObsMCLauncher.Desktop/Styles/Theme.axaml" />
        <StyleInclude Source="avares://ObsMCLauncher.Desktop/Styles/Controls.axaml" />
    </Application.Styles>
</Application>
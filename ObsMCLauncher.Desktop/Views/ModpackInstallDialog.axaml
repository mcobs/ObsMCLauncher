<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ObsMCLauncher.Desktop.ViewModels"
        x:Class="ObsMCLauncher.Desktop.Views.ModpackInstallDialog"
        x:DataType="vm:ModpackInstallDialogViewModel"
        Width="520" Height="220"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Title="安装整合包">

  <Grid RowDefinitions="Auto,Auto,Auto" Margin="16" RowSpacing="12">

    <TextBlock Grid.Row="0" Text="{Binding Prompt}" FontSize="16" FontWeight="SemiBold" />

    <TextBox Grid.Row="1" Text="{Binding VersionName}" />

    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
      <Button Content="取消" Command="{Binding CancelCommand}" />
      <Button Content="确定" Command="{Binding OkCommand}" />
    </StackPanel>

  </Grid>
</Window>

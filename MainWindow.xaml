<Window x:Class="ObsMCLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Obs Minecraft 启动器" 
        Height="700" 
        Width="1100"
        MinHeight="600"
        MinWidth="900"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="CanResize"
        TextElement.Foreground="{StaticResource TextBrush}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      ResizeBorderThickness="5" 
                      GlassFrameThickness="0"
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 自定义标题栏 -->
        <Border Grid.Row="0" 
                Grid.ColumnSpan="2" 
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo和标题 -->
                <StackPanel Grid.Column="0" 
                          Orientation="Horizontal" 
                          Margin="15,0,0,0"
                          VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Minecraft" 
                                           Width="20" 
                                           Height="20" 
                                           Foreground="{StaticResource PrimaryBrush}"
                                           VerticalAlignment="Center"/>
                    <TextBlock Text="黑曜石MC启动器" 
                             FontSize="13" 
                             FontWeight="SemiBold"
                             Margin="10,0,0,0"
                             VerticalAlignment="Center"/>
                </StackPanel>

                <!-- 窗口控制按钮 -->
                <StackPanel Grid.Column="2" 
                          Orientation="Horizontal" 
                          HorizontalAlignment="Right"
                          WindowChrome.IsHitTestVisibleInChrome="True">
                    
                    <!-- 最小化按钮 -->
                    <Button x:Name="MinimizeButton"
                          Click="MinimizeButton_Click"
                          Width="46"
                          Height="40"
                          Style="{StaticResource MaterialDesignFlatButton}"
                          Foreground="{StaticResource TextBrush}"
                          ToolTip="最小化">
                        <materialDesign:PackIcon Kind="WindowMinimize" 
                                               Width="16" 
                                               Height="16"/>
                    </Button>

                    <!-- 最大化/还原按钮 -->
                    <Button x:Name="MaximizeButton"
                          Click="MaximizeButton_Click"
                          Width="46"
                          Height="40"
                          Style="{StaticResource MaterialDesignFlatButton}"
                          Foreground="{StaticResource TextBrush}"
                          ToolTip="最大化">
                        <materialDesign:PackIcon x:Name="MaximizeIcon"
                                               Kind="WindowMaximize" 
                                               Width="16" 
                                               Height="16"/>
                    </Button>

                    <!-- 关闭按钮 -->
                    <Button x:Name="CloseButton"
                          Click="CloseButton_Click"
                          Width="46"
                          Height="40"
                          Style="{StaticResource MaterialDesignFlatButton}"
                          Foreground="{StaticResource TextBrush}"
                          ToolTip="关闭">
                        <Button.Resources>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#DC3545"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Resources>
                        <materialDesign:PackIcon Kind="WindowClose" 
                                               Width="16" 
                                               Height="16"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 左侧导航栏 - WinUI 3 风格 -->
        <Border Grid.Row="1"
                Grid.Column="0" 
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo 区域 - 带呼吸动画 -->
                <StackPanel Grid.Row="0" Margin="20,30,20,30">
                    <materialDesign:PackIcon x:Name="LogoIcon"
                                           Kind="Minecraft" 
                                           Width="50" 
                                           Height="50" 
                                           Foreground="{StaticResource PrimaryBrush}"
                                           HorizontalAlignment="Center">
                        <materialDesign:PackIcon.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                       From="0.8" To="1.0" Duration="0:0:2">
                                            <DoubleAnimation.EasingFunction>
                                                <SineEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </materialDesign:PackIcon.Triggers>
                    </materialDesign:PackIcon>
                    <TextBlock Text="Obs MC启动器" 
                             FontSize="16" 
                             FontWeight="SemiBold"
                             HorizontalAlignment="Center"
                             Margin="0,10,0,0"
                             Foreground="{StaticResource TextBrush}"/>
                    <TextBlock Text="v1.0.0" 
                             FontSize="11" 
                             HorizontalAlignment="Center"
                             Foreground="{StaticResource TextSecondaryBrush}"
                             Margin="0,5,0,0"/>
                </StackPanel>

                <!-- 导航菜单 -->
                <StackPanel Grid.Row="1" Margin="10,0">
                    <RadioButton x:Name="HomeButton"
                               Style="{StaticResource MaterialDesignTabRadioButton}"
                               Content="主页"
                               IsChecked="True"
                               Click="NavigationButton_Click"
                               Tag="Home"
                               Height="50"
                               Margin="0,5">
                        <RadioButton.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Home" 
                                                           Width="24" 
                                                           Height="24" 
                                                           VerticalAlignment="Center"
                                                           Margin="10,0"/>
                                    <TextBlock Text="{Binding}" 
                                             VerticalAlignment="Center" 
                                             FontSize="14"
                                             Margin="15,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </RadioButton.ContentTemplate>
                    </RadioButton>

                    <RadioButton x:Name="AccountButton"
                               Style="{StaticResource MaterialDesignTabRadioButton}"
                               Content="账号管理"
                               Click="NavigationButton_Click"
                               Tag="Account"
                               Height="50"
                               Margin="0,5">
                        <RadioButton.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="AccountMultiple" 
                                                           Width="24" 
                                                           Height="24" 
                                                           VerticalAlignment="Center"
                                                           Margin="10,0"/>
                                    <TextBlock Text="{Binding}" 
                                             VerticalAlignment="Center" 
                                             FontSize="14"
                                             Margin="15,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </RadioButton.ContentTemplate>
                    </RadioButton>

                    <RadioButton x:Name="VersionButton"
                               Style="{StaticResource MaterialDesignTabRadioButton}"
                               Content="版本管理"
                               Click="NavigationButton_Click"
                               Tag="Version"
                               Height="50"
                               Margin="0,5">
                        <RadioButton.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Download" 
                                                           Width="24" 
                                                           Height="24" 
                                                           VerticalAlignment="Center"
                                                           Margin="10,0"/>
                                    <TextBlock Text="{Binding}" 
                                             VerticalAlignment="Center" 
                                             FontSize="14"
                                             Margin="15,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </RadioButton.ContentTemplate>
                    </RadioButton>

                    <RadioButton x:Name="ResourcesButton"
                               Style="{StaticResource MaterialDesignTabRadioButton}"
                               Content="资源下载"
                               Click="NavigationButton_Click"
                               Tag="Resources"
                               Height="50"
                               Margin="0,5">
                        <RadioButton.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Package" 
                                                           Width="24" 
                                                           Height="24" 
                                                           VerticalAlignment="Center"
                                                           Margin="10,0"/>
                                    <TextBlock Text="{Binding}" 
                                             VerticalAlignment="Center" 
                                             FontSize="14"
                                             Margin="15,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </RadioButton.ContentTemplate>
                    </RadioButton>

                    <RadioButton x:Name="SettingsButton"
                               Style="{StaticResource MaterialDesignTabRadioButton}"
                               Content="设置"
                               Click="NavigationButton_Click"
                               Tag="Settings"
                               Height="50"
                               Margin="0,5">
                        <RadioButton.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Settings" 
                                                           Width="24" 
                                                           Height="24" 
                                                           VerticalAlignment="Center"
                                                           Margin="10,0"/>
                                    <TextBlock Text="{Binding}" 
                                             VerticalAlignment="Center" 
                                             FontSize="14"
                                             Margin="15,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </RadioButton.ContentTemplate>
                    </RadioButton>
                </StackPanel>

                <!-- 底部信息 -->
                <StackPanel Grid.Row="2" Margin="20,20">
                    <TextBlock Text="© 2025 ObsMCLauncher" 
                             FontSize="10" 
                             HorizontalAlignment="Center"
                             Foreground="#666666"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 右侧内容区域 -->
        <Frame x:Name="MainFrame" 
               Grid.Row="1"
               Grid.Column="1" 
               NavigationUIVisibility="Hidden"
               Background="{StaticResource BackgroundBrush}"/>

        <!-- 全局：通知容器 -->
        <Canvas x:Name="GlobalNotificationContainer"
                Grid.Row="0"
                Grid.Column="1"
                Grid.RowSpan="2"
                Panel.ZIndex="999">
            <!-- 通知将动态添加到这里 -->
            <!-- Canvas不设置Background，让鼠标事件穿透到下层UI，但通知本身有Background可以接收事件 -->
        </Canvas>

        <!-- 全局：登录进度悬浮窗（已废弃，保留用于兼容） -->
        <Border x:Name="GlobalLoginProgressPanel"
                Grid.Row="0"
                Grid.Column="1"
                Grid.RowSpan="2"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Margin="0,15,0,0"
                Width="420"
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="8"
                Padding="15,12"
                Visibility="Collapsed"
                Panel.ZIndex="999">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel>
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0"
                            Background="{StaticResource PrimaryBrush}"
                            CornerRadius="16"
                            Width="32"
                            Height="32"
                            Margin="0,0,10,0">
                        <materialDesign:PackIcon Kind="Microsoft"
                                                 Width="18"
                                                 Height="18"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="微软账户登录"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,2"/>
                        <TextBlock x:Name="GlobalLoginProgressStatus"
                                   Text="准备登录..."
                                   FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Grid>
                <ProgressBar x:Name="GlobalLoginProgressBar"
                             Height="3"
                             IsIndeterminate="True"
                             Foreground="{StaticResource PrimaryBrush}"
                             Background="#3F3F46"
                             BorderThickness="0"/>
            </StackPanel>
        </Border>

        <!-- 全局：模态背景遮罩 -->
        <Border x:Name="GlobalModalOverlay"
                Grid.Row="0"
                Grid.Column="0"
                Grid.RowSpan="2"
                Grid.ColumnSpan="2"
                Background="#80000000"
                Visibility="Collapsed"
                Panel.ZIndex="1000"
                MouseDown="GlobalModalOverlay_MouseDown"/>

        <!-- 全局：授权URL模态对话框 -->
        <Border x:Name="GlobalAuthUrlDialog"
                Grid.Row="0"
                Grid.Column="0"
                Grid.RowSpan="2"
                Grid.ColumnSpan="2"
                Width="480"
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="12"
                Padding="24"
                Visibility="Collapsed"
                Panel.ZIndex="1001"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>
            <StackPanel>
                <!-- 标题 -->
                <Grid Margin="0,0,0,16">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Microsoft"
                                                 Width="28"
                                                 Height="28"
                                                 Foreground="{StaticResource PrimaryBrush}"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,10,0"/>
                        <TextBlock Text="微软账户登录"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- 说明 -->
                <TextBlock Text="如果浏览器没有自动打开，请手动访问以下网址："
                           FontSize="13"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,0,0,12"
                           TextWrapping="Wrap"/>

                <!-- URL 显示框 -->
                <Border Background="#2D2D30"
                        CornerRadius="6"
                        Padding="12"
                        Margin="0,0,0,16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0"
                                   Text="授权链接"
                                   FontSize="10"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,6"/>
                        
                        <ScrollViewer Grid.Row="1"
                                      HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Disabled"
                                      MaxHeight="70">
                            <TextBlock x:Name="GlobalAuthUrlText"
                                       Text="https://login.microsoftonline.com/..."
                                       FontSize="11"
                                       Foreground="#FFFFFF"
                                       TextWrapping="Wrap"
                                       FontFamily="Consolas"/>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- 按钮区域 -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            x:Name="GlobalCopyAuthUrlButton"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Height="36"
                            Margin="0,0,8,0"
                            Click="GlobalCopyAuthUrl_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentCopy"
                                                     Width="16"
                                                     Height="16"
                                                     Margin="0,0,6,0"/>
                            <TextBlock Text="复制链接" VerticalAlignment="Center" FontSize="13"/>
                        </StackPanel>
                    </Button>

                    <Button Grid.Column="1"
                            Content="好的"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="{StaticResource PrimaryBrush}"
                            Width="100"
                            Height="36"
                            FontSize="13"
                            Click="GlobalCloseAuthUrlDialog_Click"/>
                </Grid>

                <!-- 提示信息 -->
                <TextBlock Text="💡 授权完成后，此对话框将自动关闭"
                           FontSize="11"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,12,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>


<Window x:Class="ObsMCLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Obs Minecraft 启动器" 
        Height="700" 
        Width="1100"
        MinHeight="600"
        MinWidth="900"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="CanResize"
        TextElement.Foreground="{StaticResource TextBrush}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      ResizeBorderThickness="5" 
                      GlassFrameThickness="0"
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 自定义标题栏 -->
        <Border Grid.Row="0" 
                Grid.ColumnSpan="2" 
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo和标题 -->
                <StackPanel Grid.Column="0" 
                          Orientation="Horizontal" 
                          Margin="15,0,0,0"
                          VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Minecraft" 
                                           Width="20" 
                                           Height="20" 
                                           Foreground="{StaticResource PrimaryBrush}"
                                           VerticalAlignment="Center"/>
                    <TextBlock Text="黑曜石MC启动器" 
                             FontSize="13" 
                             FontWeight="SemiBold"
                             Margin="10,0,0,0"
                             VerticalAlignment="Center"/>
                </StackPanel>

                <!-- 窗口控制按钮 -->
                <StackPanel Grid.Column="2" 
                          Orientation="Horizontal" 
                          HorizontalAlignment="Right"
                          WindowChrome.IsHitTestVisibleInChrome="True">
                    
                    <!-- 最小化按钮 -->
                    <Button x:Name="MinimizeButton"
                          Click="MinimizeButton_Click"
                          Width="46"
                          Height="40"
                          Style="{StaticResource MaterialDesignFlatButton}"
                          Foreground="{StaticResource TextBrush}"
                          ToolTip="最小化">
                        <materialDesign:PackIcon Kind="WindowMinimize" 
                                               Width="16" 
                                               Height="16"/>
                    </Button>

                    <!-- 最大化/还原按钮 -->
                    <Button x:Name="MaximizeButton"
                          Click="MaximizeButton_Click"
                          Width="46"
                          Height="40"
                          Style="{StaticResource MaterialDesignFlatButton}"
                          Foreground="{StaticResource TextBrush}"
                          ToolTip="最大化">
                        <materialDesign:PackIcon x:Name="MaximizeIcon"
                                               Kind="WindowMaximize" 
                                               Width="16" 
                                               Height="16"/>
                    </Button>

                    <!-- 关闭按钮 -->
                    <Button x:Name="CloseButton"
                          Click="CloseButton_Click"
                          Width="46"
                          Height="40"
                          Style="{StaticResource MaterialDesignFlatButton}"
                          Foreground="{StaticResource TextBrush}"
                          ToolTip="关闭">
                        <Button.Resources>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#DC3545"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Resources>
                        <materialDesign:PackIcon Kind="WindowClose" 
                                               Width="16" 
                                               Height="16"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 左侧导航栏 -->
        <Border Grid.Row="1"
                Grid.Column="0" 
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="#3F3F46"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo 区域 -->
                <StackPanel Grid.Row="0" Margin="20,30,20,30">
                    <materialDesign:PackIcon Kind="Minecraft" 
                                           Width="50" 
                                           Height="50" 
                                           Foreground="{StaticResource PrimaryBrush}"
                                           HorizontalAlignment="Center"/>
                    <TextBlock Text="Obs MC启动器" 
                             FontSize="16" 
                             FontWeight="Bold"
                             HorizontalAlignment="Center"
                             Margin="0,10,0,0"
                             Foreground="{StaticResource TextBrush}"/>
                    <TextBlock Text="v1.0.0" 
                             FontSize="11" 
                             HorizontalAlignment="Center"
                             Foreground="#999999"
                             Margin="0,5,0,0"/>
                </StackPanel>

                <!-- 导航菜单 -->
                <StackPanel Grid.Row="1" Margin="10,0">
                    <RadioButton x:Name="HomeButton"
                               Style="{StaticResource MaterialDesignTabRadioButton}"
                               Content="主页"
                               IsChecked="True"
                               Click="NavigationButton_Click"
                               Tag="Home"
                               Height="50"
                               Margin="0,5">
                        <RadioButton.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Home" 
                                                           Width="24" 
                                                           Height="24" 
                                                           VerticalAlignment="Center"
                                                           Margin="10,0"/>
                                    <TextBlock Text="{Binding}" 
                                             VerticalAlignment="Center" 
                                             FontSize="14"
                                             Margin="15,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </RadioButton.ContentTemplate>
                    </RadioButton>

                    <RadioButton x:Name="VersionButton"
                               Style="{StaticResource MaterialDesignTabRadioButton}"
                               Content="版本下载"
                               Click="NavigationButton_Click"
                               Tag="Version"
                               Height="50"
                               Margin="0,5">
                        <RadioButton.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Download" 
                                                           Width="24" 
                                                           Height="24" 
                                                           VerticalAlignment="Center"
                                                           Margin="10,0"/>
                                    <TextBlock Text="{Binding}" 
                                             VerticalAlignment="Center" 
                                             FontSize="14"
                                             Margin="15,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </RadioButton.ContentTemplate>
                    </RadioButton>

                    <RadioButton x:Name="ResourcesButton"
                               Style="{StaticResource MaterialDesignTabRadioButton}"
                               Content="资源下载"
                               Click="NavigationButton_Click"
                               Tag="Resources"
                               Height="50"
                               Margin="0,5">
                        <RadioButton.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Package" 
                                                           Width="24" 
                                                           Height="24" 
                                                           VerticalAlignment="Center"
                                                           Margin="10,0"/>
                                    <TextBlock Text="{Binding}" 
                                             VerticalAlignment="Center" 
                                             FontSize="14"
                                             Margin="15,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </RadioButton.ContentTemplate>
                    </RadioButton>

                    <RadioButton x:Name="SettingsButton"
                               Style="{StaticResource MaterialDesignTabRadioButton}"
                               Content="设置"
                               Click="NavigationButton_Click"
                               Tag="Settings"
                               Height="50"
                               Margin="0,5">
                        <RadioButton.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Settings" 
                                                           Width="24" 
                                                           Height="24" 
                                                           VerticalAlignment="Center"
                                                           Margin="10,0"/>
                                    <TextBlock Text="{Binding}" 
                                             VerticalAlignment="Center" 
                                             FontSize="14"
                                             Margin="15,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </RadioButton.ContentTemplate>
                    </RadioButton>
                </StackPanel>

                <!-- 底部信息 -->
                <StackPanel Grid.Row="2" Margin="20,20">
                    <TextBlock Text="© 2025 ObsMCLauncher" 
                             FontSize="10" 
                             HorizontalAlignment="Center"
                             Foreground="#666666"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 右侧内容区域 -->
        <Frame x:Name="MainFrame" 
               Grid.Row="1"
               Grid.Column="1" 
               NavigationUIVisibility="Hidden"
               Background="{StaticResource BackgroundBrush}"/>
    </Grid>
</Window>


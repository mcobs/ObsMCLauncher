<Page x:Class="ObsMCLauncher.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      KeepAlive="True"
      Background="{StaticResource BackgroundBrush}">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

            <!-- 欢迎横幅 -->
            <Border Grid.Row="0"
                    CornerRadius="16"
                    Margin="0,0,0,30"
                    Height="200">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1e3a8a" Offset="0"/>
                        <GradientStop Color="#059669" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                
                <Grid>
                    <!-- 装饰性背景图案 -->
                    <Canvas>
                        <!-- 大圆形装饰 -->
                        <Ellipse Width="200" Height="200" 
                                Canvas.Right="-50" Canvas.Top="-50"
                                Fill="#FFFFFF" Opacity="0.05"/>
                        <Ellipse Width="150" Height="150" 
                                Canvas.Left="-30" Canvas.Bottom="-30"
                                Fill="#FFFFFF" Opacity="0.08"/>
                        
                        <Rectangle Width="40" Height="40" 
                                  Canvas.Right="120" Canvas.Top="60"
                                  Fill="#FFFFFF" Opacity="0.1"
                                  RadiusX="4" RadiusY="4">
                            <Rectangle.RenderTransform>
                                <RotateTransform Angle="15"/>
                            </Rectangle.RenderTransform>
                        </Rectangle>
                        <Rectangle Width="30" Height="30" 
                                  Canvas.Left="80" Canvas.Bottom="80"
                                  Fill="#FFFFFF" Opacity="0.12"
                                  RadiusX="3" RadiusY="3">
                            <Rectangle.RenderTransform>
                                <RotateTransform Angle="-20"/>
                            </Rectangle.RenderTransform>
                        </Rectangle>
                        <Rectangle Width="25" Height="25" 
                                  Canvas.Right="200" Canvas.Bottom="120"
                                  Fill="#FFFFFF" Opacity="0.1"
                                  RadiusX="3" RadiusY="3">
                            <Rectangle.RenderTransform>
                                <RotateTransform Angle="45"/>
                            </Rectangle.RenderTransform>
                        </Rectangle>
                    </Canvas>
                    
                    <!-- 主要内容 -->
                    <StackPanel VerticalAlignment="Center"
                              HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,12">
                            <materialDesign:PackIcon Kind="Minecraft" 
                                                   Width="50" 
                                                   Height="50"
                                                   Foreground="White"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,12,0"/>
                            <TextBlock Text="Obs MC Launcher" 
                                     FontSize="38" 
                                     FontWeight="Bold"
                                     Foreground="White"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Text="让您的 Minecraft 之旅更加轻松愉快" 
                                 FontSize="16" 
                                 Foreground="#E0E0E0"
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,8"/>
                        
                        <TextBlock Text="🎮 开始您的冒险吧" 
                                 FontSize="14" 
                                 Foreground="#B0B0B0"
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>



            <!-- 快速启动区域 -->
            <Border Grid.Row="2"
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="8"
                    Padding="20,15"
                    Margin="0,15,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 账号选择 -->
                    <ComboBox Grid.Column="0"
                            x:Name="AccountComboBox"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="选择游戏账号"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}">
                        <!-- 动态加载账号列表 -->
                    </ComboBox>

                    <!-- 版本选择 -->
                    <ComboBox Grid.Column="2"
                            x:Name="VersionComboBox"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="选择游戏版本"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}">
                        <!-- 动态加载版本列表 -->
                    </ComboBox>

                    <!-- 启动按钮 -->
                    <Button Grid.Column="4"
                          x:Name="LaunchButton"
                          Content="启动游戏"
                          Height="40"
                          Width="140"
                          FontSize="14"
                          VerticalAlignment="Center"
                          Style="{StaticResource MaterialDesignRaisedButton}"
                          materialDesign:ButtonAssist.CornerRadius="6"
                          Background="{StaticResource PrimaryBrush}"
                          Click="LaunchButton_Click">
                        <Button.Effect>
                            <DropShadowEffect Color="{Binding Source={StaticResource PrimaryBrush}, Path=Color}" 
                                            BlurRadius="12" 
                                            Opacity="0.2" 
                                            ShadowDepth="0"/>
                        </Button.Effect>
                    </Button>
                </Grid>
            </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>


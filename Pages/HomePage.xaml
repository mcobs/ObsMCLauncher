<Page x:Class="ObsMCLauncher.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      Background="{StaticResource BackgroundBrush}">

    <Grid>
        <!-- 悬浮的依赖下载进度 -->
        <Border x:Name="DependencyDownloadPanel"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Margin="0,20,0,0"
                Width="500"
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="10"
                Padding="20,15"
                Visibility="Collapsed"
                Panel.ZIndex="1000">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            
            <StackPanel>
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0"
                            Background="{StaticResource PrimaryBrush}"
                            CornerRadius="20"
                            Width="36"
                            Height="36"
                            Margin="0,0,12,0">
                        <materialDesign:PackIcon Kind="Download"
                                               Width="20"
                                               Height="20"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="正在补全游戏依赖..."
                                 FontSize="14"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,2"/>
                        <TextBlock x:Name="DependencyDownloadStatus"
                                 Text="准备下载..."
                                 FontSize="11"
                                 Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Grid>
                
                <!-- 进度条 -->
                <ProgressBar x:Name="DependencyDownloadProgress"
                             Height="3"
                             Minimum="0"
                             Maximum="100"
                             Value="0"
                             Foreground="{StaticResource PrimaryBrush}"
                             Background="#3F3F46"
                             BorderThickness="0"/>
            </StackPanel>
        </Border>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

            <!-- 欢迎区域 -->
            <StackPanel Grid.Row="0">
                <TextBlock Text="欢迎使用 Obs MC 启动器" 
                         FontSize="32" 
                         FontWeight="Bold"
                         Foreground="{StaticResource TextBrush}"
                         Margin="0,0,0,10"/>
                <TextBlock Text="让您的 Minecraft 之旅更加轻松愉快" 
                         FontSize="16" 
                         Foreground="#AAAAAA"
                         Margin="0,0,0,30"/>
            </StackPanel>

            <!-- 快速启动区域 -->
            <Border Grid.Row="1" 
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="10"
                    Padding="25"
                    Margin="0,0,0,30">
                <StackPanel>
                    <TextBlock Text="快速启动" 
                             FontSize="20" 
                             FontWeight="SemiBold"
                             Margin="0,0,0,20"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 账号选择 -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="当前账号" 
                                     FontSize="14" 
                                     Foreground="#AAAAAA"
                                     Margin="0,0,0,5"/>
                            <ComboBox x:Name="AccountComboBox"
                                    HorizontalAlignment="Stretch"
                                    materialDesign:HintAssist.Hint="选择游戏账号"
                                    Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                <!-- 动态加载账号列表 -->
                            </ComboBox>
                        </StackPanel>

                        <!-- 版本选择 -->
                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                            <TextBlock Text="当前版本" 
                                     FontSize="14" 
                                     Foreground="#AAAAAA"
                                     Margin="0,0,0,5"/>
                            <ComboBox x:Name="VersionComboBox"
                                    HorizontalAlignment="Stretch"
                                    materialDesign:HintAssist.Hint="选择游戏版本"
                                    Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                <!-- 动态加载版本列表 -->
                            </ComboBox>
                        </StackPanel>

                        <!-- 启动按钮 -->
                        <Button Grid.Column="4"
                              x:Name="LaunchButton"
                              Content="启动游戏"
                              Height="56"
                              Width="150"
                              FontSize="16"
                              VerticalAlignment="Bottom"
                              Style="{StaticResource MaterialDesignRaisedButton}"
                              materialDesign:ButtonAssist.CornerRadius="8"
                              Background="{StaticResource PrimaryBrush}"
                              Click="LaunchButton_Click">
                            <Button.Effect>
                                <DropShadowEffect Color="{Binding Source={StaticResource PrimaryBrush}, Path=Color}" 
                                                BlurRadius="16" 
                                                Opacity="0.2" 
                                                ShadowDepth="0"/>
                            </Button.Effect>
                        </Button>
                    </Grid>

                    <!-- 启动选项 -->
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <CheckBox Content="离线模式" 
                                Margin="0,0,20,0"
                                Style="{StaticResource MaterialDesignCheckBox}"/>
                        <CheckBox Content="显示启动日志" 
                                Margin="0,0,20,0"
                                Style="{StaticResource MaterialDesignCheckBox}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 功能卡片区域 -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 版本管理卡片 -->
                <Border Grid.Row="0" Grid.Column="0"
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="10"
                        Padding="20"
                        Margin="0,0,15,15">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Download" 
                                               Width="40" 
                                               Height="40"
                                               Foreground="{StaticResource PrimaryBrush}"
                                               Margin="0,0,0,15"/>
                        <TextBlock Text="版本管理" 
                                 FontSize="18" 
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,10"/>
                        <TextBlock Text="下载和管理不同的 Minecraft 版本" 
                                 FontSize="13" 
                                 Foreground="#AAAAAA"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,15"/>
                        <Button Content="前往下载" 
                              Style="{StaticResource MaterialDesignOutlinedButton}"
                              HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- 资源管理卡片 -->
                <Border Grid.Row="0" Grid.Column="1"
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="10"
                        Padding="20"
                        Margin="0,0,15,15">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Package" 
                                               Width="40" 
                                               Height="40"
                                               Foreground="{StaticResource SecondaryBrush}"
                                               Margin="0,0,0,15"/>
                        <TextBlock Text="资源中心" 
                                 FontSize="18" 
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,10"/>
                        <TextBlock Text="下载 MOD、材质包、光影等资源" 
                                 FontSize="13" 
                                 Foreground="#AAAAAA"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,15"/>
                        <Button Content="浏览资源" 
                              Style="{StaticResource MaterialDesignOutlinedButton}"
                              HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- 设置卡片 -->
                <Border Grid.Row="0" Grid.Column="2"
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="10"
                        Padding="20"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Settings" 
                                               Width="40" 
                                               Height="40"
                                               Foreground="{StaticResource AccentBrush}"
                                               Margin="0,0,0,15"/>
                        <TextBlock Text="个性化设置" 
                                 FontSize="18" 
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,10"/>
                        <TextBlock Text="自定义启动器和游戏配置" 
                                 FontSize="13" 
                                 Foreground="#AAAAAA"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,15"/>
                        <Button Content="打开设置" 
                              Style="{StaticResource MaterialDesignOutlinedButton}"
                              HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- 底部状态栏 -->
            <Border Grid.Row="3"
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="8"
                    Padding="20,15"
                    Margin="0,15,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="InformationOutline" 
                                               Width="20" 
                                               Height="20"
                                               VerticalAlignment="Center"
                                               Margin="0,0,10,0"/>
                        <TextBlock Text="启动器状态：就绪" 
                                 VerticalAlignment="Center"
                                 FontSize="13"/>
                    </StackPanel>
                    <TextBlock x:Name="SystemInfoText"
                             Text="正在加载系统信息..." 
                             HorizontalAlignment="Right"
                             VerticalAlignment="Center"
                             FontSize="13"
                             Foreground="#AAAAAA"/>
                </Grid>
            </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>


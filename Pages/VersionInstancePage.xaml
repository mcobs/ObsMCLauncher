<Page x:Class="ObsMCLauncher.Pages.VersionInstancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      Background="{DynamicResource BackgroundBrush}"
      UseLayoutRounding="True"
      TextOptions.TextFormattingMode="Display"
      TextOptions.TextRenderingMode="ClearType">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部导航栏 -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 返回按钮 -->
            <Button Grid.Column="0"
                    x:Name="BackButton"
                    Click="BackButton_Click"
                    Style="{StaticResource MaterialDesignIconButton}"
                    Width="40"
                    Height="40"
                    Margin="0,0,15,0"
                    ToolTip="返回">
                <materialDesign:PackIcon Kind="ArrowLeft" Width="24" Height="24"/>
            </Button>

            <!-- 标题 -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="TitleText"
                         Text="版本实例管理" 
                         FontSize="28" 
                         FontWeight="Bold"/>
                <TextBlock x:Name="SubtitleText"
                         Text="管理版本实例的配置和信息" 
                         FontSize="14" 
                         Foreground="{DynamicResource TextSecondaryBrush}"
                         Margin="0,8,0,0"/>
            </StackPanel>
        </Grid>

        <!-- 内容区域 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 版本信息卡片 -->
                <Border Background="{DynamicResource SurfaceBrush}"
                        CornerRadius="10"
                        Padding="20"
                        Margin="0,0,0,16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 标题 -->
                        <TextBlock Grid.Row="0"
                                 Text="版本信息"
                                 FontSize="18"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,12"/>

                        <!-- 信息列表 -->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 版本ID -->
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                     Text="版本ID："
                                     FontSize="14"
                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                     Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="0" Grid.Column="1"
                                     x:Name="VersionIdText"
                                     Text="-"
                                     FontSize="14"
                                     FontWeight="SemiBold"
                                     Margin="0,0,0,8"/>

                            <!-- 实际版本 -->
                            <TextBlock Grid.Row="1" Grid.Column="0"
                                     Text="实际版本："
                                     FontSize="14"
                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                     Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="1" Grid.Column="1"
                                     x:Name="ActualVersionText"
                                     Text="-"
                                     FontSize="14"
                                     Margin="0,0,0,8"/>

                            <!-- 版本类型 -->
                            <TextBlock Grid.Row="2" Grid.Column="0"
                                     Text="版本类型："
                                     FontSize="14"
                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                     Margin="0,0,0,8"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,8">
                                <materialDesign:PackIcon x:Name="LoaderIcon"
                                                       Width="18"
                                                       Height="18"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                <TextBlock x:Name="VersionTypeText"
                                         Text="-"
                                         FontSize="14"
                                         VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- 上次游玩 -->
                            <TextBlock Grid.Row="3" Grid.Column="0"
                                     Text="上次游玩："
                                     FontSize="14"
                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                     Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="3" Grid.Column="1"
                                     x:Name="LastPlayedText"
                                     Text="-"
                                     FontSize="14"
                                     Margin="0,0,0,8"/>

                            <!-- 版本隔离 -->
                            <TextBlock Grid.Row="4" Grid.Column="0"
                                     Text="版本隔离："
                                     FontSize="14"
                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                     Margin="0,0,0,8"/>
                            <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,8">
                                <materialDesign:PackIcon x:Name="IsolationIcon"
                                                       Kind="FolderMultiple"
                                                       Width="16"
                                                       Height="16"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                <ComboBox x:Name="IsolationComboBox"
                                          SelectionChanged="IsolationComboBox_SelectionChanged"
                                          Width="200"
                                          FontSize="13"
                                          materialDesign:HintAssist.Hint="版本隔离设置"
                                          Style="{StaticResource MaterialDesignComboBox}"
                                          Foreground="{DynamicResource TextBrush}">
                                    <ComboBox.Resources>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                                            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                                            <Setter Property="Padding" Value="10,8"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource SurfaceElevatedBrush}"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ComboBox.Resources>
                                    <ComboBoxItem Content="跟随全局设置" Tag="global"/>
                                    <ComboBoxItem Content="启用版本隔离（独立文件夹）" Tag="enabled"/>
                                    <ComboBoxItem Content="禁用版本隔离（共享文件夹）" Tag="disabled"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- 存储路径 -->
                            <TextBlock Grid.Row="5" Grid.Column="0"
                                     Text="存储路径："
                                     FontSize="14"
                                     Foreground="{DynamicResource TextSecondaryBrush}"/>
                            <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal">
                                <TextBlock x:Name="PathText"
                                         Text="-"
                                         FontSize="13"
                                         VerticalAlignment="Center"
                                         Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <Button x:Name="OpenFolderButton"
                                      Click="OpenFolderButton_Click"
                                      Style="{StaticResource MaterialDesignIconButton}"
                                      Width="28"
                                      Height="28"
                                      Margin="10,0,0,0"
                                      ToolTip="打开文件夹">
                                    <materialDesign:PackIcon Kind="FolderOpen" Width="16" Height="16"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- 快速操作卡片 -->
                <Border Background="{DynamicResource SurfaceBrush}"
                        CornerRadius="10"
                        Padding="20"
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 标题 -->
                        <TextBlock Grid.Row="0"
                                 Text="快速操作"
                                 FontSize="18"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,12"/>

                        <!-- 操作按钮 -->
                        <UniformGrid Grid.Row="1" Columns="2" Rows="2">
                            <!-- 启动游戏 -->
                            <Button x:Name="LaunchButton"
                                  Click="LaunchButton_Click"
                                  Style="{StaticResource MaterialDesignRaisedButton}"
                                  Background="{StaticResource PrimaryBrush}"
                                  Height="50"
                                  Margin="0,0,10,10"
                                  materialDesign:ButtonAssist.CornerRadius="8">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Play" 
                                                           Width="20" 
                                                           Height="20"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,10,0"/>
                                    <TextBlock Text="启动游戏" 
                                             FontSize="14"
                                             VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- 打开文件夹 -->
                            <Button x:Name="OpenFolderButton2"
                                  Click="OpenFolderButton_Click"
                                  Style="{StaticResource MaterialDesignOutlinedButton}"
                                  Height="50"
                                  Margin="10,0,0,10"
                                  materialDesign:ButtonAssist.CornerRadius="8">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Folder" 
                                                           Width="20" 
                                                           Height="20"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,10,0"/>
                                    <TextBlock Text="打开文件夹" 
                                             FontSize="14"
                                             VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- 设为当前版本 -->
                            <Button x:Name="SetAsCurrentButton"
                                  Click="SetAsCurrentButton_Click"
                                  Style="{StaticResource MaterialDesignOutlinedButton}"
                                  Height="50"
                                  Margin="0,10,10,0"
                                  materialDesign:ButtonAssist.CornerRadius="8">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="CheckCircle" 
                                                           Width="20" 
                                                           Height="20"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,10,0"/>
                                    <TextBlock Text="设为当前版本" 
                                             FontSize="14"
                                             VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- 删除版本 -->
                            <Button x:Name="DeleteButton"
                                  Click="DeleteButton_Click"
                                  Style="{StaticResource MaterialDesignOutlinedButton}"
                                  Foreground="#DC3545"
                                  BorderBrush="#DC3545"
                                  Height="50"
                                  Margin="10,10,0,0"
                                  materialDesign:ButtonAssist.CornerRadius="8">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Delete" 
                                                           Width="20" 
                                                           Height="20"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,10,0"/>
                                    <TextBlock Text="删除版本" 
                                             FontSize="14"
                                             VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </UniformGrid>
                    </Grid>
                </Border>

                <!-- 游戏配置卡片 -->
                <Border Background="{DynamicResource SurfaceBrush}"
                        CornerRadius="10"
                        Padding="20"
                        Margin="0,0,0,16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 标题 -->
                        <TextBlock Grid.Row="0"
                                 Text="游戏配置"
                                 FontSize="18"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,12"/>

                        <!-- 配置信息 -->
                        <StackPanel Grid.Row="1">
                            <TextBlock Text="Mods 文件夹"
                                     FontSize="14"
                                     FontWeight="SemiBold"
                                     Margin="0,0,0,8"/>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="ModsCountText"
                                         Grid.Column="0"
                                         Text="检测中..."
                                         FontSize="13"
                                         Foreground="{DynamicResource TextSecondaryBrush}"
                                         VerticalAlignment="Center"/>
                                <Button Grid.Column="1"
                                      x:Name="OpenModsFolderButton"
                                      Click="OpenModsFolderButton_Click"
                                      Style="{StaticResource MaterialDesignOutlinedButton}"
                                      Height="32"
                                      FontSize="12"
                                      Padding="12,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FolderOpen" 
                                                               Width="14" 
                                                               Height="14"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,6,0"/>
                                        <TextBlock Text="打开" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </Grid>

                            <TextBlock Text="存档文件夹"
                                     FontSize="14"
                                     FontWeight="SemiBold"
                                     Margin="0,0,0,8"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="SavesCountText"
                                         Grid.Column="0"
                                         Text="检测中..."
                                         FontSize="13"
                                         Foreground="{DynamicResource TextSecondaryBrush}"
                                         VerticalAlignment="Center"/>
                                <Button Grid.Column="1"
                                      x:Name="ManageWorldsButton"
                                      Click="ManageWorldsButton_Click"
                                      Style="{StaticResource MaterialDesignOutlinedButton}"
                                      Height="32"
                                      FontSize="12"
                                      Padding="12,0"
                                      Margin="0,0,8,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Map" 
                                                               Width="14" 
                                                               Height="14"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,6,0"/>
                                        <TextBlock Text="管理世界" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button Grid.Column="2"
                                      x:Name="OpenSavesFolderButton"
                                      Click="OpenSavesFolderButton_Click"
                                      Style="{StaticResource MaterialDesignOutlinedButton}"
                                      Height="32"
                                      FontSize="12"
                                      Padding="12,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FolderOpen" 
                                                               Width="14" 
                                                               Height="14"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,6,0"/>
                                        <TextBlock Text="打开" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 世界管理卡片（可展开） -->
                <Border x:Name="WorldsManagementCard"
                        Background="{DynamicResource SurfaceBrush}"
                        CornerRadius="10"
                        Padding="20"
                        Visibility="Collapsed">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 标题栏 -->
                        <Grid Grid.Row="0" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                     Text="世界管理"
                                     FontSize="18"
                                     FontWeight="SemiBold"
                                     VerticalAlignment="Center"/>
                            
                            <Button Grid.Column="1"
                                  x:Name="CloseWorldsButton"
                                  Click="CloseWorldsButton_Click"
                                  Style="{StaticResource MaterialDesignIconButton}"
                                  Width="32"
                                  Height="32"
                                  ToolTip="收起">
                                <materialDesign:PackIcon Kind="ChevronUp" Width="20" Height="20"/>
                            </Button>
                        </Grid>

                        <!-- 搜索和操作栏 -->
                        <Grid Grid.Row="1" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="WorldSearchBox"
                                   Grid.Column="0"
                                   materialDesign:HintAssist.Hint="搜索世界..."
                                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                   Margin="0,0,8,0"
                                   KeyDown="WorldSearchBox_KeyDown"/>

                            <Button Grid.Column="1"
                                  x:Name="RefreshWorldsButton"
                                  Click="RefreshWorldsButton_Click"
                                  Style="{StaticResource MaterialDesignOutlinedButton}"
                                  Height="32"
                                  FontSize="12"
                                  Padding="12,0"
                                  Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Refresh" 
                                                           Width="14" 
                                                           Height="14"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,6,0"/>
                                    <TextBlock Text="刷新" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="2"
                                  x:Name="OpenBackupFolderButton"
                                  Click="OpenBackupFolderButton_Click"
                                  Style="{StaticResource MaterialDesignOutlinedButton}"
                                  Height="32"
                                  FontSize="12"
                                  Padding="12,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Folder" 
                                                           Width="14" 
                                                           Height="14"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,6,0"/>
                                    <TextBlock Text="备份目录" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- 世界列表 -->
                        <ScrollViewer Grid.Row="2" 
                                    VerticalScrollBarVisibility="Auto"
                                    MaxHeight="400">
                            <ItemsControl x:Name="WorldsList">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource BackgroundBrush}"
                                              CornerRadius="8"
                                              Padding="12"
                                              Margin="0,0,12,12"
                                              Width="240"
                                              MinHeight="180">
                                            <Border.Effect>
                                                <DropShadowEffect Color="Black" 
                                                                BlurRadius="8" 
                                                                ShadowDepth="2" 
                                                                Opacity="0.15"/>
                                            </Border.Effect>
                                            
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- 缩略图 -->
                                                <Border Grid.Row="0"
                                                      Width="216"
                                                      Height="120"
                                                      CornerRadius="6"
                                                      Background="#2C2C2C"
                                                      Margin="0,0,0,8">
                                                    <Grid>
                                                        <Image Source="{Binding ThumbnailPath}"
                                                             Stretch="UniformToFill"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center">
                                                            <Image.Style>
                                                                <Style TargetType="Image">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding ThumbnailPath}" Value="{x:Null}">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Image.Style>
                                                        </Image>
                                                        <materialDesign:PackIcon Kind="Map"
                                                                               Width="48"
                                                                               Height="48"
                                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                                               HorizontalAlignment="Center"
                                                                               VerticalAlignment="Center">
                                                            <materialDesign:PackIcon.Style>
                                                                <Style TargetType="materialDesign:PackIcon">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding ThumbnailPath}" Value="{x:Null}">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </materialDesign:PackIcon.Style>
                                                        </materialDesign:PackIcon>
                                                    </Grid>
                                                </Border>

                                                <!-- 世界名称 -->
                                                <TextBlock Grid.Row="1"
                                                         Text="{Binding Name}"
                                                         FontSize="15"
                                                         FontWeight="SemiBold"
                                                         TextTrimming="CharacterEllipsis"
                                                         Margin="0,0,0,6"/>

                                                <!-- 世界信息 -->
                                                <StackPanel Grid.Row="2" Margin="0,0,0,8">
                                                    <TextBlock FontSize="11"
                                                             Foreground="{DynamicResource TextSecondaryBrush}"
                                                             Margin="0,0,0,3">
                                                        <Run Text="大小: "/>
                                                        <Run Text="{Binding FormattedSize, Mode=OneWay}"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="11"
                                                             Foreground="{DynamicResource TextSecondaryBrush}"
                                                             Margin="0,0,0,3">
                                                        <Run Text="最后游玩: "/>
                                                        <Run Text="{Binding FormattedLastPlayed, Mode=OneWay}"/>
                                                    </TextBlock>
                                                </StackPanel>

                                                <!-- 操作按钮 -->
                                                <StackPanel Grid.Row="3"
                                                          Orientation="Horizontal"
                                                          HorizontalAlignment="Right">
                                                    <Button Content="备份"
                                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                                          Padding="10,4"
                                                          Margin="0,0,6,0"
                                                          FontSize="11"
                                                          Click="BackupWorld_Click"
                                                          Tag="{Binding}"/>
                                                    <Button Content="详情"
                                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                                          Padding="10,4"
                                                          Margin="0,0,6,0"
                                                          FontSize="11"
                                                          Click="ViewWorldDetails_Click"
                                                          Tag="{Binding}"/>
                                                    <Button Content="删除"
                                                          Padding="10,4"
                                                          FontSize="11"
                                                          Click="DeleteWorld_Click"
                                                          Tag="{Binding}">
                                                        <Button.Style>
                                                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                                                <Setter Property="Foreground" Value="#DC3545"/>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#DC354520"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- 空状态 -->
                        <StackPanel x:Name="WorldsEmptyState"
                                  Grid.Row="2"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"
                                  Visibility="Collapsed">
                            <materialDesign:PackIcon Kind="MapOutline"
                                                   Width="48"
                                                   Height="48"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="0,0,0,12"/>
                            <TextBlock Text="暂无世界"
                                     FontSize="16"
                                     FontWeight="SemiBold"
                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                     HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

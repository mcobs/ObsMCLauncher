<Page x:Class="ObsMCLauncher.Pages.ScreenshotsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:converters="clr-namespace:ObsMCLauncher.Utils.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      KeepAlive="True"
      Background="{DynamicResource BackgroundBrush}"
      UseLayoutRounding="True"
      TextOptions.TextFormattingMode="Display"
      TextOptions.TextRenderingMode="ClearType">
    
    <Page.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题区域 -->
        <Grid Grid.Row="0" Margin="24,24,24,16">
            <StackPanel>
                <TextBlock Text="游戏截图管理" 
                         FontSize="24" 
                         FontWeight="Bold"
                         Margin="0,0,0,8"/>
                <TextBlock Text="管理您的 Minecraft 游戏截图" 
                         FontSize="13" 
                         Foreground="{DynamicResource TextSecondaryBrush}"/>
            </StackPanel>
        </Grid>

        <!-- 搜索和筛选栏 -->
        <Border Grid.Row="1"
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="10"
                Padding="20"
                Margin="24,0,24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 搜索框 -->
                <TextBox x:Name="SearchBox"
                       Grid.Column="0"
                       materialDesign:HintAssist.Hint="搜索截图..."
                       Style="{StaticResource MaterialDesignOutlinedTextBox}"
                       Margin="0,0,12,0"
                       KeyDown="SearchBox_KeyDown"/>

                <!-- 版本筛选 -->
                <ComboBox x:Name="VersionFilterComboBox"
                        Grid.Column="1"
                        materialDesign:HintAssist.Hint="版本筛选"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}"
                        Margin="0,0,12,0"
                        Width="180"
                        SelectionChanged="VersionFilterComboBox_SelectionChanged">
                    <ComboBoxItem Content="全部" Tag="{x:Null}"/>
                </ComboBox>

                <!-- 日期筛选 -->
                <DatePicker x:Name="StartDatePicker"
                          Grid.Column="2"
                          materialDesign:HintAssist.Hint="开始日期"
                          Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                          Margin="0,0,8,0"
                          SelectedDateChanged="DatePicker_SelectedDateChanged"/>

                <DatePicker x:Name="EndDatePicker"
                          Grid.Column="3"
                          materialDesign:HintAssist.Hint="结束日期"
                          Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                          Margin="0,0,12,0"
                          SelectedDateChanged="DatePicker_SelectedDateChanged"/>

                <!-- 刷新按钮 -->
                <Button Grid.Column="4"
                      x:Name="RefreshButton"
                      Click="RefreshButton_Click"
                      Style="{StaticResource MaterialDesignOutlinedButton}"
                      ToolTip="刷新列表">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Refresh" 
                                               Width="18" 
                                               Height="18"
                                               VerticalAlignment="Center"/>
                        <TextBlock Text="刷新" 
                                 Margin="6,0,0,0"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- 截图列表 -->
        <ScrollViewer Grid.Row="2" 
                    VerticalScrollBarVisibility="Auto"
                    Margin="24,0,24,24">
            <ItemsControl x:Name="ScreenshotsList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource SurfaceBrush}"
                              CornerRadius="12"
                              Padding="8"
                              Margin="0,0,16,16"
                              Width="200"
                              Cursor="Hand"
                              MouseLeftButtonDown="ScreenshotCard_MouseLeftButtonDown"
                              Tag="{Binding}">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" 
                                                BlurRadius="12" 
                                                ShadowDepth="2" 
                                                Opacity="0.2"/>
                            </Border.Effect>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="150"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 截图预览 -->
                                <Border Grid.Row="0"
                                      CornerRadius="8"
                                      Background="#2C2C2C"
                                      Margin="0,0,0,8">
                                    <Image Source="{Binding FullPath}"
                                         Stretch="UniformToFill"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                                </Border>

                                <!-- 文件名 -->
                                <TextBlock Grid.Row="1"
                                         Text="{Binding FileName}"
                                         FontSize="13"
                                         FontWeight="SemiBold"
                                         TextTrimming="CharacterEllipsis"
                                         Margin="0,0,0,4"/>

                                <!-- 信息 -->
                                <StackPanel Grid.Row="2" Margin="0,0,0,8">
                                    <TextBlock FontSize="11"
                                             Foreground="{DynamicResource TextSecondaryBrush}"
                                             Margin="0,0,0,2">
                                        <Run Text="大小: "/>
                                        <Run Text="{Binding FormattedSize, Mode=OneWay}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="11"
                                             Foreground="{DynamicResource TextSecondaryBrush}"
                                             Margin="0,0,0,2">
                                        <Run Text="创建时间: "/>
                                        <Run Text="{Binding FormattedCreatedTime, Mode=OneWay}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="11"
                                             Foreground="{DynamicResource TextSecondaryBrush}"
                                             Visibility="{Binding VersionName, Converter={StaticResource NullToVisibilityConverter}}">
                                        <Run Text="版本: "/>
                                        <Run Text="{Binding VersionName}"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- 操作按钮 -->
                                <StackPanel Grid.Row="3"
                                          Orientation="Horizontal"
                                          HorizontalAlignment="Right">
                                    <Button Content="查看"
                                          Style="{StaticResource MaterialDesignFlatButton}"
                                          Padding="8,4"
                                          Margin="0,0,4,0"
                                          Click="ViewScreenshot_Click"
                                          Tag="{Binding}"/>
                                    <Button Content="导出"
                                          Style="{StaticResource MaterialDesignFlatButton}"
                                          Padding="8,4"
                                          Margin="0,0,4,0"
                                          Click="ExportScreenshot_Click"
                                          Tag="{Binding}"/>
                                    <Button Content="删除"
                                          Padding="8,4"
                                          Click="DeleteScreenshot_Click"
                                          Tag="{Binding}">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                                <Setter Property="Foreground" Value="#DC3545"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#DC354520"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- 空状态 -->
        <StackPanel x:Name="EmptyStatePanel"
                  Grid.Row="2"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Visibility="Collapsed">
            <materialDesign:PackIcon Kind="ImageOutline"
                                   Width="64"
                                   Height="64"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,0,0,16"/>
            <TextBlock Text="暂无截图"
                     FontSize="18"
                     FontWeight="SemiBold"
                     Foreground="{DynamicResource TextSecondaryBrush}"
                     HorizontalAlignment="Center"
                     Margin="0,0,0,8"/>
            <TextBlock Text="您还没有任何游戏截图"
                     FontSize="13"
                     Foreground="{DynamicResource TextTertiaryBrush}"
                     HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>


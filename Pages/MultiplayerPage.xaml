<Page x:Class="ObsMCLauncher.Pages.MultiplayerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      Background="{DynamicResource BackgroundBrush}"
      UseLayoutRounding="True"
      TextOptions.TextFormattingMode="Display"
      TextOptions.TextRenderingMode="ClearType">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部栏：仅在子页面显示返回按钮 -->
        <Border Grid.Row="0"
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="10"
                Padding="16"
                BorderThickness="1"
                BorderBrush="{DynamicResource BorderBrush}">
            <DockPanel>
                <Button x:Name="TopBackButton"
                        Content="返回"
                        Width="80"
                        Height="32"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Click="TopBackButton_Click"
                        DockPanel.Dock="Left"
                        Visibility="Collapsed"/>
                <TextBlock Text="多人联机"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextBrush}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </DockPanel>
        </Border>

        <!-- 主内容：模式选择 -->
        <Grid x:Name="ModeSelectView" Grid.Row="1" Margin="0,16,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="10"
                    Padding="16"
                    BorderThickness="1"
                    BorderBrush="{DynamicResource BorderBrush}"
                    Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="选择联机模式"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,0,0,6"/>
                    <TextBlock x:Name="ModuleStatusText"
                               Text="正在检测联机模块..."
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>

            <Grid Grid.Row="1" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="OpenHostPanelButton"
                        Grid.Column="0"
                        Height="140"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Click="OpenHostPanelButton_Click"
                        IsEnabled="False">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="Home" Width="44" Height="44" Margin="0,0,0,10"/>
                        <TextBlock Text="我要开房" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="分享你的本地服务器" FontSize="12" Opacity="0.85" HorizontalAlignment="Center" Margin="0,6,0,0"/>
                    </StackPanel>
                </Button>

                <Button x:Name="OpenJoinPanelButton"
                        Grid.Column="2"
                        Height="140"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Click="OpenJoinPanelButton_Click"
                        IsEnabled="False">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="AccountGroup" Width="44" Height="44" Margin="0,0,0,10"/>
                        <TextBlock Text="加入房间" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="输入分享码加入" FontSize="12" Opacity="0.85" HorizontalAlignment="Center" Margin="0,6,0,0"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>

        <!-- 子页面：开房/加入，左右分栏：左侧表单，右侧运行输出 -->
        <Border x:Name="DetailView"
                Grid.Row="1"
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="10"
                Padding="16"
                BorderThickness="1"
                BorderBrush="{DynamicResource BorderBrush}"
                Margin="0,16,0,0"
                Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="DetailTitleText"
                           Grid.Row="0"
                           Text=""
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}"
                           Margin="0,0,0,12"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 左侧：表单区（开房/加入二选一） -->
                    <Grid Grid.Column="0">
                        <StackPanel x:Name="HostPanel" Visibility="Collapsed">
                            <TextBox x:Name="ServerPortTextBox"
                                     materialDesign:HintAssist.Hint="本地服务器端口 (默认 25565)"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Text="25565"
                                     Margin="0,0,0,10"/>
                            <Button x:Name="StartServerButton"
                                    Content="开始开房"
                                    Height="36"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Click="StartServerButton_Click"/>

                            <Border Background="{DynamicResource SurfaceElevatedBrush}"
                                    CornerRadius="6"
                                    Padding="12"
                                    Margin="0,12,0,0">
                                <StackPanel>
                                    <TextBlock Text="分享码" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}"/>
                                    <TextBox x:Name="ShareCodeTextBox"
                                             IsReadOnly="True"
                                             Text=""
                                             BorderThickness="0"
                                             Background="Transparent"
                                             Foreground="{DynamicResource TextBrush}"
                                             FontSize="14"
                                             Margin="0,6,0,0"/>
                                    <Button x:Name="CopyShareCodeButton"
                                            Content="复制分享码"
                                            Height="32"
                                            Margin="0,10,0,0"
                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                            Click="CopyShareCodeButton_Click"
                                            IsEnabled="False"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <StackPanel x:Name="JoinPanel" Visibility="Collapsed">
                            <TextBox x:Name="JoinCodeTextBox"
                                     materialDesign:HintAssist.Hint="分享码"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Margin="0,0,0,10"/>
                            <Button x:Name="JoinRoomButton"
                                    Content="加入"
                                    Height="36"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Click="JoinRoomButton_Click"/>
                        </StackPanel>
                    </Grid>

                    <!-- 右侧：运行输出 -->
                    <Border Grid.Column="2"
                            Background="{DynamicResource SurfaceElevatedBrush}"
                            CornerRadius="6"
                            Padding="12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="运行输出"
                                           FontSize="12"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           VerticalAlignment="Center"/>

                                <Button x:Name="StopLinkButton"
                                        Grid.Column="1"
                                        Height="28"
                                        Padding="10,0"
                                        Margin="8,0,0,0"
                                        Content="停止联机"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Click="StopLinkButton_Click"
                                        Visibility="Collapsed"/>
                            </Grid>

                            <TextBox x:Name="OutputTextBox"
                                     Grid.Row="1"
                                     IsReadOnly="True"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                     FontSize="12"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     Margin="0,6,0,0"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>

<Page x:Class="ObsMCLauncher.Pages.ModDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      Background="{DynamicResource BackgroundBrush}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 返回按钮和标题 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <Button x:Name="BackButton"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    HorizontalAlignment="Left"
                    Click="BackButton_Click"
                    Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ArrowLeft" 
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                    <TextBlock Text="返回" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- MOD基本信息 -->
            <Border Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="10"
                    Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- MOD图标 -->
                    <Border x:Name="ModIcon"
                            Grid.Column="0"
                            Width="120"
                            Height="120"
                            CornerRadius="12"
                            Background="{DynamicResource BorderBrush}"
                            Margin="0,0,25,0"/>

                    <!-- MOD信息 -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock x:Name="ModName"
                                 Text="MOD名称"
                                 FontSize="28"
                                 FontWeight="Bold"
                                 Margin="0,0,0,10"/>
                        
                        <TextBlock x:Name="ModSummary"
                                 Text="MOD简介"
                                 FontSize="14"
                                 Foreground="{DynamicResource TextSecondaryBrush}"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Account"
                                                   Width="18"
                                                   Height="18"
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="0,0,5,0"/>
                            <TextBlock x:Name="ModAuthor"
                                     Text="作者"
                                     FontSize="13"
                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                     VerticalAlignment="Center"
                                     Margin="0,0,20,0"/>

                            <materialDesign:PackIcon Kind="Download"
                                                   Width="18"
                                                   Height="18"
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="0,0,5,0"/>
                            <TextBlock x:Name="ModDownloads"
                                     Text="下载量"
                                     FontSize="13"
                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                     VerticalAlignment="Center"
                                     Margin="0,0,20,0"/>

                            <materialDesign:PackIcon Kind="Update"
                                                   Width="18"
                                                   Height="18"
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="0,0,5,0"/>
                            <TextBlock x:Name="ModLastUpdate"
                                     Text="更新时间"
                                     FontSize="13"
                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>

        <!-- 版本列表区域 -->
        <Border Grid.Row="1"
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="10"
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 版本列表标题 -->
                <TextBlock Grid.Row="0"
                         Text="可用版本"
                         FontSize="20"
                         FontWeight="SemiBold"
                         Margin="0,0,0,10"/>

                <!-- 版本列表 -->
                <ScrollViewer Grid.Row="1"
                            VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="VersionListPanel"/>
                </ScrollViewer>

                <!-- 底部加载进度条 -->
                <Border x:Name="BottomLoadingPanel"
                       Grid.Row="1"
                       VerticalAlignment="Bottom"
                       Background="{DynamicResource SurfaceElevatedBrush}"
                       CornerRadius="8"
                       Padding="15,10"
                       Margin="10"
                       Visibility="Collapsed">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <ProgressBar Grid.Column="0"
                                   Style="{StaticResource MaterialDesignCircularProgressBar}"
                                   IsIndeterminate="True"
                                   Width="28"
                                   Height="28"
                                   Margin="0,0,12,0"/>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="BottomLoadingText"
                                     Text="正在加载版本..."
                                     FontSize="13"
                                     FontWeight="Medium"/>
                            <ProgressBar x:Name="BottomLoadingProgressBar"
                                       Height="4"
                                       Minimum="0"
                                       Maximum="100"
                                       Value="0"
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <TextBlock Grid.Column="2"
                                 x:Name="BottomLoadingPercentage"
                                 Text="0%"
                                 FontSize="13"
                                 FontWeight="SemiBold"
                                 VerticalAlignment="Center"
                                 Margin="12,0,0,0"/>
                    </Grid>
                </Border>

                <!-- 加载中提示 -->
                <StackPanel x:Name="LoadingPanel"
                          Grid.Row="1"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Visibility="Collapsed">
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                               IsIndeterminate="True"
                               Width="60"
                               Height="60"/>
                    <TextBlock Text="加载中..."
                             Margin="0,15,0,0"
                             FontSize="14"
                             Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>

                <!-- 空状态 -->
                <StackPanel x:Name="EmptyPanel"
                          Grid.Row="1"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Visibility="Collapsed">
                    <materialDesign:PackIcon Kind="FileQuestion"
                                           Width="80"
                                           Height="80"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,15"/>
                    <TextBlock Text="没有找到可用版本"
                             FontSize="16"
                             Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>


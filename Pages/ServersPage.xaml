<Page x:Class="ObsMCLauncher.Pages.ServersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:converters="clr-namespace:ObsMCLauncher.Utils.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      KeepAlive="True"
      Background="{DynamicResource BackgroundBrush}"
      UseLayoutRounding="True"
      TextOptions.TextFormattingMode="Display"
      TextOptions.TextRenderingMode="ClearType">
    
    <Page.Resources>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题区域 -->
        <Grid Grid.Row="0" Margin="24,24,24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="服务器收藏夹" 
                         FontSize="24" 
                         FontWeight="Bold"
                         Margin="0,0,0,8"/>
                <TextBlock Text="管理您收藏的 Minecraft 服务器" 
                         FontSize="13" 
                         Foreground="{DynamicResource TextSecondaryBrush}"/>
            </StackPanel>

            <!-- 添加服务器按钮 -->
            <Button Grid.Column="1"
                  x:Name="AddServerButton"
                  Click="AddServerButton_Click"
                  Style="{StaticResource MaterialDesignRaisedButton}"
                  Background="{StaticResource PrimaryBrush}"
                  Padding="16,8">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Plus" 
                                           Width="18" 
                                           Height="18"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                    <TextBlock Text="添加服务器" 
                             VerticalAlignment="Center"
                             FontSize="14"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- 搜索和筛选栏 -->
        <Border Grid.Row="1"
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="10"
                Padding="20"
                Margin="24,0,24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 搜索框 -->
                <TextBox x:Name="SearchBox"
                       Grid.Column="0"
                       materialDesign:HintAssist.Hint="搜索服务器..."
                       Style="{StaticResource MaterialDesignOutlinedTextBox}"
                       Margin="0,0,12,0"
                       KeyDown="SearchBox_KeyDown"/>

                <!-- 分组筛选 -->
                <ComboBox x:Name="GroupFilterComboBox"
                        Grid.Column="1"
                        materialDesign:HintAssist.Hint="分组筛选"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}"
                        Margin="0,0,12,0"
                        Width="150"
                        SelectionChanged="GroupFilterComboBox_SelectionChanged">
                    <ComboBoxItem Content="全部分组" Tag="{x:Null}"/>
                </ComboBox>

                <!-- 刷新状态按钮 -->
                <Button Grid.Column="2"
                      x:Name="RefreshStatusButton"
                      Click="RefreshStatusButton_Click"
                      Style="{StaticResource MaterialDesignOutlinedButton}"
                      Margin="0,0,12,0"
                      ToolTip="刷新服务器状态">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Refresh" 
                                               Width="18" 
                                               Height="18"
                                               VerticalAlignment="Center"/>
                        <TextBlock Text="刷新状态" 
                                 Margin="6,0,0,0"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- 刷新列表按钮 -->
                <Button Grid.Column="3"
                      x:Name="RefreshButton"
                      Click="RefreshButton_Click"
                      Style="{StaticResource MaterialDesignOutlinedButton}"
                      ToolTip="刷新列表">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Refresh" 
                                               Width="18" 
                                               Height="18"
                                               VerticalAlignment="Center"/>
                        <TextBlock Text="刷新" 
                                 Margin="6,0,0,0"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- 服务器列表 -->
        <ScrollViewer Grid.Row="2" 
                    VerticalScrollBarVisibility="Auto"
                    Margin="24,0,24,24">
            <ItemsControl x:Name="ServersList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource SurfaceBrush}"
                              CornerRadius="12"
                              Padding="20"
                              Margin="0,0,16,16"
                              Width="320"
                              MinHeight="180">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" 
                                                BlurRadius="12" 
                                                ShadowDepth="2" 
                                                Opacity="0.2"/>
                            </Border.Effect>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 服务器名称和状态 -->
                                <Grid Grid.Row="0" Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0"
                                             Text="{Binding Name}"
                                             FontSize="18"
                                             FontWeight="SemiBold"
                                             TextTrimming="CharacterEllipsis"/>
                                    
                                    <!-- 在线状态指示器 -->
                                    <Ellipse Grid.Column="1"
                                           Width="12"
                                           Height="12"
                                           Margin="8,0,0,0"
                                           VerticalAlignment="Center">
                                        <Ellipse.Fill>
                                            <SolidColorBrush Color="{Binding IsOnline, Converter={StaticResource BoolToColorConverter}}"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </Grid>

                                <!-- 服务器地址 -->
                                <TextBlock Grid.Row="1"
                                         Text="{Binding FullAddress}"
                                         FontSize="13"
                                         Foreground="{DynamicResource TextSecondaryBrush}"
                                         TextTrimming="CharacterEllipsis"
                                         Margin="0,0,0,12"/>

                                <!-- 服务器信息 -->
                                <StackPanel Grid.Row="2" Margin="0,0,0,12">
                                    <TextBlock FontSize="12"
                                             Foreground="{DynamicResource TextSecondaryBrush}"
                                             Margin="0,0,0,4"
                                             Visibility="{Binding IsOnline, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <Run Text="延迟: "/>
                                        <Run Text="{Binding FormattedPing, Mode=OneWay}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="12"
                                             Foreground="{DynamicResource TextSecondaryBrush}"
                                             Margin="0,0,0,4"
                                             Visibility="{Binding IsOnline, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <Run Text="玩家: "/>
                                        <Run Text="{Binding FormattedPlayers, Mode=OneWay}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="12"
                                             Foreground="{DynamicResource TextSecondaryBrush}"
                                             Visibility="{Binding Description, Converter={StaticResource NullToVisibilityConverter}}">
                                        <Run Text="描述: "/>
                                        <Run Text="{Binding Description}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="12"
                                             Foreground="{DynamicResource TextSecondaryBrush}"
                                             Visibility="{Binding Group, Converter={StaticResource NullToVisibilityConverter}}">
                                        <Run Text="分组: "/>
                                        <Run Text="{Binding Group}"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- 操作按钮 -->
                                <StackPanel Grid.Row="3"
                                          Orientation="Horizontal"
                                          HorizontalAlignment="Right">
                                    <Button Content="连接"
                                          Style="{StaticResource MaterialDesignRaisedButton}"
                                          Background="{StaticResource PrimaryBrush}"
                                          Padding="12,6"
                                          Margin="0,0,8,0"
                                          Click="ConnectServer_Click"
                                          Tag="{Binding}"/>
                                    <Button Content="编辑"
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          Padding="12,6"
                                          Margin="0,0,8,0"
                                          Click="EditServer_Click"
                                          Tag="{Binding}"/>
                                    <Button Content="删除"
                                          Padding="12,6"
                                          Click="DeleteServer_Click"
                                          Tag="{Binding}">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                                <Setter Property="Foreground" Value="#DC3545"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#DC354520"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- 空状态 -->
        <StackPanel x:Name="EmptyStatePanel"
                  Grid.Row="2"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Visibility="Collapsed">
            <materialDesign:PackIcon Kind="ServerNetwork"
                                   Width="64"
                                   Height="64"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,0,0,16"/>
            <TextBlock Text="暂无服务器"
                     FontSize="18"
                     FontWeight="SemiBold"
                     Foreground="{DynamicResource TextSecondaryBrush}"
                     HorizontalAlignment="Center"
                     Margin="0,0,0,8"/>
            <TextBlock Text="点击&quot;添加服务器&quot;按钮添加您喜欢的服务器"
                     FontSize="13"
                     Foreground="{DynamicResource TextTertiaryBrush}"
                     HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>


<Page x:Class="ObsMCLauncher.Pages.WorldsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      KeepAlive="True"
      Background="{DynamicResource BackgroundBrush}"
      UseLayoutRounding="True"
      TextOptions.TextFormattingMode="Display"
      TextOptions.TextRenderingMode="ClearType">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题区域 -->
        <Grid Grid.Row="0" Margin="24,24,24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 返回按钮（可选，当从版本管理页面进入时显示） -->
            <Button x:Name="BackButton"
                  Grid.Column="0"
                  Click="BackButton_Click"
                  Style="{StaticResource MaterialDesignFlatButton}"
                  Padding="5"
                  Margin="0,0,15,0"
                  Visibility="Collapsed">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ArrowLeft" 
                                           Width="20" 
                                           Height="20"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                    <TextBlock Text="返回" 
                             VerticalAlignment="Center"
                             FontSize="14"/>
                </StackPanel>
            </Button>
            
            <StackPanel Grid.Column="1">
                <TextBlock Text="世界/存档管理" 
                         FontSize="24" 
                         FontWeight="Bold"
                         Margin="0,0,0,8"/>
                <TextBlock Text="管理您的 Minecraft 世界和存档" 
                         FontSize="13" 
                         Foreground="{DynamicResource TextSecondaryBrush}"/>
            </StackPanel>
        </Grid>

        <!-- 搜索和操作栏 -->
        <Border Grid.Row="1"
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="10"
                Padding="20"
                Margin="24,0,24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 搜索框 -->
                <TextBox x:Name="SearchBox"
                       Grid.Column="0"
                       materialDesign:HintAssist.Hint="搜索世界..."
                       Style="{StaticResource MaterialDesignOutlinedTextBox}"
                       Margin="0,0,12,0"
                       KeyDown="SearchBox_KeyDown"/>

                <!-- 刷新按钮 -->
                <Button Grid.Column="1"
                      x:Name="RefreshButton"
                      Click="RefreshButton_Click"
                      Style="{StaticResource MaterialDesignOutlinedButton}"
                      Margin="0,0,8,0"
                      ToolTip="刷新列表">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Refresh" 
                                               Width="18" 
                                               Height="18"
                                               VerticalAlignment="Center"/>
                        <TextBlock Text="刷新" 
                                 Margin="6,0,0,0"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- 备份目录按钮 -->
                <Button Grid.Column="2"
                      x:Name="OpenBackupFolderButton"
                      Click="OpenBackupFolderButton_Click"
                      Style="{StaticResource MaterialDesignOutlinedButton}"
                      ToolTip="打开备份目录">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Folder" 
                                               Width="18" 
                                               Height="18"
                                               VerticalAlignment="Center"/>
                        <TextBlock Text="备份目录" 
                                 Margin="6,0,0,0"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- 世界列表 -->
        <ScrollViewer Grid.Row="2" 
                    VerticalScrollBarVisibility="Auto"
                    Margin="24,0,24,24">
            <ItemsControl x:Name="WorldsList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource SurfaceBrush}"
                              CornerRadius="12"
                              Padding="16"
                              Margin="0,0,16,16"
                              Width="280"
                              MinHeight="200">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" 
                                                BlurRadius="12" 
                                                ShadowDepth="2" 
                                                Opacity="0.2"/>
                            </Border.Effect>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 缩略图 -->
                                <Border Grid.Row="0"
                                      Width="248"
                                      Height="140"
                                      CornerRadius="8"
                                      Background="#2C2C2C"
                                      Margin="0,0,0,12">
                                    <Grid>
                                        <Image x:Name="ThumbnailImage"
                                             Source="{Binding ThumbnailPath}"
                                             Stretch="UniformToFill"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ThumbnailPath}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                        
                                        <!-- 默认图标 -->
                                        <materialDesign:PackIcon Kind="Map"
                                                               Width="64"
                                                               Height="64"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center">
                                            <materialDesign:PackIcon.Style>
                                                <Style TargetType="materialDesign:PackIcon">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ThumbnailPath}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </materialDesign:PackIcon.Style>
                                        </materialDesign:PackIcon>
                                    </Grid>
                                </Border>

                                <!-- 世界名称 -->
                                <TextBlock Grid.Row="1"
                                         Text="{Binding Name}"
                                         FontSize="16"
                                         FontWeight="SemiBold"
                                         TextTrimming="CharacterEllipsis"
                                         Margin="0,0,0,8"/>

                                <!-- 世界信息 -->
                                <StackPanel Grid.Row="2" Margin="0,0,0,12">
                                    <TextBlock FontSize="12"
                                             Foreground="{DynamicResource TextSecondaryBrush}"
                                             Margin="0,0,0,4">
                                        <Run Text="大小: "/>
                                        <Run Text="{Binding FormattedSize, Mode=OneWay}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="12"
                                             Foreground="{DynamicResource TextSecondaryBrush}"
                                             Margin="0,0,0,4">
                                        <Run Text="最后游玩: "/>
                                        <Run Text="{Binding FormattedLastPlayed, Mode=OneWay}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="12"
                                             Foreground="{DynamicResource TextSecondaryBrush}"
                                             Margin="0,0,0,4">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding GameMode, TargetNullValue=''}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                        <Run Text="游戏模式: "/>
                                        <Run Text="{Binding GameMode}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="12"
                                             Foreground="{DynamicResource TextSecondaryBrush}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Seed, TargetNullValue=0}" Value="0">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                        <Run Text="种子: "/>
                                        <Run Text="{Binding Seed}"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- 操作按钮 -->
                                <StackPanel Grid.Row="3"
                                          Orientation="Horizontal"
                                          HorizontalAlignment="Right">
                                    <Button Content="备份"
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          Padding="12,6"
                                          Margin="0,0,8,0"
                                          Click="BackupWorld_Click"
                                          Tag="{Binding}"/>
                                    <Button Content="详情"
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          Padding="12,6"
                                          Margin="0,0,8,0"
                                          Click="ViewDetails_Click"
                                          Tag="{Binding}"/>
                                    <Button Content="删除"
                                          Padding="12,6"
                                          Click="DeleteWorld_Click"
                                          Tag="{Binding}">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                                <Setter Property="Foreground" Value="#DC3545"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#DC354520"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- 空状态 -->
        <StackPanel x:Name="EmptyStatePanel"
                  Grid.Row="2"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Visibility="Collapsed">
            <materialDesign:PackIcon Kind="MapOutline"
                                   Width="64"
                                   Height="64"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,0,0,16"/>
            <TextBlock Text="暂无世界"
                     FontSize="18"
                     FontWeight="SemiBold"
                     Foreground="{DynamicResource TextSecondaryBrush}"
                     HorizontalAlignment="Center"
                     Margin="0,0,0,8"/>
            <TextBlock Text="您还没有创建任何世界"
                     FontSize="13"
                     Foreground="{DynamicResource TextTertiaryBrush}"
                     HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>


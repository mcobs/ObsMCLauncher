<Page x:Class="ObsMCLauncher.Pages.AccountManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      KeepAlive="True"
      Background="{StaticResource BackgroundBrush}">

    <Grid>
        <!-- 主内容区域 -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 标题区域 -->
            <StackPanel Grid.Row="0">
                <TextBlock Text="账号管理" 
                         FontSize="28" 
                         FontWeight="Bold"
                         Margin="0,0,0,10"/>
                <TextBlock Text="管理您的 Minecraft 账号，支持微软账户和离线模式" 
                         FontSize="14" 
                         Foreground="{StaticResource TextSecondaryBrush}"
                         Margin="0,0,0,25"/>
            </StackPanel>

            <!-- 账号列表和操作 -->
            <StackPanel Grid.Row="1">
                
                <!-- 添加账号按钮 -->
                <Border Background="{StaticResource SurfaceBrush}"
                        CornerRadius="10"
                        Padding="25"
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="添加新账号" 
                                     FontSize="18" 
                                     FontWeight="SemiBold"
                                     Margin="0,0,0,5"/>
                            <TextBlock Text="登录微软账户或创建离线账号" 
                                     FontSize="13" 
                                     Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>

                        <Button Grid.Column="1"
                              Style="{StaticResource MaterialDesignRaisedButton}"
                              Background="{StaticResource PrimaryBrush}"
                              Margin="0,0,15,0"
                              Padding="20,10"
                              Click="AddMicrosoftAccount_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Microsoft" 
                                                       Width="20" 
                                                       Height="20"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="微软账户" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="2"
                              Style="{StaticResource MaterialDesignOutlinedButton}"
                              Padding="20,10"
                              Click="AddOfflineAccount_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountOff" 
                                                       Width="20" 
                                                       Height="20"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="离线账户" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <!-- 添加账号输入界面 -->
                <Border x:Name="AddAccountPanel"
                        Background="{StaticResource SurfaceElevatedBrush}"
                        CornerRadius="10"
                        Padding="25"
                        Margin="0,0,0,20"
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="添加离线账户" 
                                 FontSize="18" 
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,20"/>
                        
                        <TextBlock Text="用户名" 
                                 FontSize="14" 
                                 Foreground="{StaticResource TextSecondaryBrush}"
                                 Margin="0,0,0,8"/>
                        
                        <TextBox x:Name="UsernameTextBox"
                               materialDesign:HintAssist.Hint="请输入用户名（3-16个字符）"
                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                               FontSize="14"
                               MaxLength="16"
                               Margin="0,0,0,20"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="取消"
                                  Style="{StaticResource MaterialDesignOutlinedButton}"
                                  Margin="0,0,15,0"
                                  Width="100"
                                  Click="CancelAddAccount_Click"/>
                            <Button Content="确认添加"
                                  Style="{StaticResource MaterialDesignRaisedButton}"
                                  Background="{StaticResource PrimaryBrush}"
                                  Width="100"
                                  Click="ConfirmAddAccount_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 账号列表 -->
                <TextBlock Text="我的账号" 
                         FontSize="20" 
                         FontWeight="SemiBold"
                         Margin="0,0,0,15"/>

                <StackPanel x:Name="AccountListPanel">
                    <!-- 动态生成账号列表 -->
                </StackPanel>

                <!-- 账号类型说明 -->
                <Border Background="{StaticResource SurfaceBrush}"
                        CornerRadius="10"
                        Padding="25"
                        Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="账号类型说明" 
                                 FontSize="18" 
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 微软账户说明 -->
                            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                <Border Background="#2D2D30"
                                        CornerRadius="8"
                                        Padding="15">
                                    <StackPanel>
                                        <materialDesign:PackIcon Kind="Microsoft"
                                                               Width="30"
                                                               Height="30"
                                                               Foreground="{StaticResource PrimaryBrush}"
                                                               Margin="0,0,0,10"/>
                                        <TextBlock Text="微软账户" 
                                                 FontSize="16" 
                                                 FontWeight="SemiBold"
                                                 Margin="0,0,0,5"/>
                                        <TextBlock Text="• 支持正版皮肤和披风" 
                                                 FontSize="12" 
                                                 Foreground="{StaticResource TextSecondaryBrush}"
                                                 Margin="0,0,0,3"/>
                                        <TextBlock Text="• 可进入正版服务器" 
                                                 FontSize="12" 
                                                 Foreground="{StaticResource TextSecondaryBrush}"
                                                 Margin="0,0,0,3"/>
                                        <TextBlock Text="• 需要购买正版游戏" 
                                                 FontSize="12" 
                                                 Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- 离线账户说明 -->
                            <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                <Border Background="#2D2D30"
                                        CornerRadius="8"
                                        Padding="15">
                                    <StackPanel>
                                        <materialDesign:PackIcon Kind="AccountOff"
                                                               Width="30"
                                                               Height="30"
                                                               Foreground="{StaticResource SecondaryBrush}"
                                                               Margin="0,0,0,10"/>
                                        <TextBlock Text="离线账户" 
                                                 FontSize="16" 
                                                 FontWeight="SemiBold"
                                                 Margin="0,0,0,5"/>
                                        <TextBlock Text="• 无需购买即可使用" 
                                                 FontSize="12" 
                                                 Foreground="{StaticResource TextSecondaryBrush}"
                                                 Margin="0,0,0,3"/>
                                        <TextBlock Text="• 仅可进入离线服务器" 
                                                 FontSize="12" 
                                                 Foreground="{StaticResource TextSecondaryBrush}"
                                                 Margin="0,0,0,3"/>
                                        <TextBlock Text="• 自定义任意用户名" 
                                                 FontSize="12" 
                                                 Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
    </Grid>
</Page>


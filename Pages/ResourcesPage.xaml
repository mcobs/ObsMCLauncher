<Page x:Class="ObsMCLauncher.Pages.ResourcesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      KeepAlive="True"
      Background="{StaticResource BackgroundBrush}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题区域 -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="资源中心" 
                     FontSize="28" 
                     FontWeight="Bold"
                     Margin="0,0,0,10"/>
            <TextBlock Text="下载 MOD、材质包、光影、数据包和整合包" 
                     FontSize="14" 
                     Foreground="#AAAAAA"
                     Margin="0,0,0,25"/>
        </StackPanel>

        <!-- 分类标签页 -->
        <Border Grid.Row="1"
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="10"
                Padding="10"
                Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="ModsTab"
                           Content="MOD"
                           IsChecked="True"
                           Style="{StaticResource MaterialDesignTabRadioButton}"
                           Margin="10,0"
                           Padding="15,10"
                           Click="ResourceTab_Click"
                           Tag="Mods"/>
                <RadioButton x:Name="TexturesTab"
                           Content="材质包"
                           Style="{StaticResource MaterialDesignTabRadioButton}"
                           Margin="10,0"
                           Padding="15,10"
                           Click="ResourceTab_Click"
                           Tag="Textures"/>
                <RadioButton x:Name="ShadersTab"
                           Content="光影"
                           Style="{StaticResource MaterialDesignTabRadioButton}"
                           Margin="10,0"
                           Padding="15,10"
                           Click="ResourceTab_Click"
                           Tag="Shaders"/>
                <RadioButton x:Name="DatapacksTab"
                           Content="数据包"
                           Style="{StaticResource MaterialDesignTabRadioButton}"
                           Margin="10,0"
                           Padding="15,10"
                           Click="ResourceTab_Click"
                           Tag="Datapacks"/>
                <RadioButton x:Name="ModpacksTab"
                           Content="整合包"
                           Style="{StaticResource MaterialDesignTabRadioButton}"
                           Margin="10,0"
                           Padding="15,10"
                           Click="ResourceTab_Click"
                           Tag="Modpacks"/>
            </StackPanel>
        </Border>

        <!-- 内容区域 -->
        <Border Grid.Row="2"
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 搜索和筛选区域 -->
                <Grid Grid.Row="0" Margin="20,20,20,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                           materialDesign:HintAssist.Hint="搜索资源..."
                           Style="{StaticResource MaterialDesignOutlinedTextBox}"
                           Margin="0,0,15,0"/>

                    <ComboBox Grid.Column="1"
                            Width="150"
                            materialDesign:HintAssist.Hint="适用版本"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                            Margin="0,0,15,0">
                        <ComboBoxItem Content="全部版本" IsSelected="True"/>
                        <ComboBoxItem Content="1.20.x"/>
                        <ComboBoxItem Content="1.19.x"/>
                        <ComboBoxItem Content="1.18.x"/>
                        <ComboBoxItem Content="1.16.x"/>
                        <ComboBoxItem Content="1.12.x"/>
                    </ComboBox>

                    <ComboBox Grid.Column="2"
                            Width="150"
                            materialDesign:HintAssist.Hint="排序方式"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}">
                        <ComboBoxItem Content="最热门" IsSelected="True"/>
                        <ComboBoxItem Content="最新"/>
                        <ComboBoxItem Content="下载量"/>
                        <ComboBoxItem Content="评分"/>
                    </ComboBox>
                </Grid>

                <!-- 资源列表 -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ResourceListPanel" Margin="20,10,20,20">
                        
                        <!-- MOD 项示例 1 -->
                        <Border Background="#2D2D30"
                                Margin="0,0,0,15"
                                CornerRadius="8"
                                Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 图标 -->
                                <Border Grid.Column="0"
                                        Width="60"
                                        Height="60"
                                        CornerRadius="8"
                                        Background="#3F3F46"
                                        VerticalAlignment="Top">
                                    <materialDesign:PackIcon Kind="Cube"
                                                           Width="35"
                                                           Height="35"
                                                           Foreground="{StaticResource PrimaryBrush}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                </Border>

                                <!-- 信息 -->
                                <StackPanel Grid.Column="1" Margin="15,0,15,0">
                                    <TextBlock Text="OptiFine HD" 
                                             FontSize="18" 
                                             FontWeight="SemiBold"/>
                                    <TextBlock Text="优化游戏性能，提升帧率，支持光影" 
                                             FontSize="13" 
                                             Foreground="#AAAAAA"
                                             TextWrapping="Wrap"
                                             Margin="0,5,0,8"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="#4CAF50"
                                                CornerRadius="3"
                                                Padding="6,2"
                                                Margin="0,0,8,0">
                                            <TextBlock Text="1.20.1" FontSize="11"/>
                                        </Border>
                                        <Border Background="#2196F3"
                                                CornerRadius="3"
                                                Padding="6,2"
                                                Margin="0,0,8,0">
                                            <TextBlock Text="性能优化" FontSize="11"/>
                                        </Border>
                                        <materialDesign:PackIcon Kind="Download" 
                                                               Width="14" 
                                                               Height="14"
                                                               VerticalAlignment="Center"
                                                               Margin="5,0,3,0"/>
                                        <TextBlock Text="1.2M" 
                                                 FontSize="12" 
                                                 Foreground="#AAAAAA"
                                                 VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- 操作按钮 -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                    <Button Content="下载"
                                          Style="{StaticResource MaterialDesignRaisedButton}"
                                          Width="100"
                                          Background="{StaticResource PrimaryBrush}"
                                          Margin="0,0,0,8"/>
                                    <Button Content="详情"
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          Width="100"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- MOD 项示例 2 -->
                        <Border Background="#2D2D30"
                                Margin="0,0,0,15"
                                CornerRadius="8"
                                Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                        Width="60"
                                        Height="60"
                                        CornerRadius="8"
                                        Background="#3F3F46"
                                        VerticalAlignment="Top">
                                    <materialDesign:PackIcon Kind="Fire"
                                                           Width="35"
                                                           Height="35"
                                                           Foreground="#FF5722"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" Margin="15,0,15,0">
                                    <TextBlock Text="Just Enough Items (JEI)" 
                                             FontSize="18" 
                                             FontWeight="SemiBold"/>
                                    <TextBlock Text="查看所有物品和合成配方的必备工具" 
                                             FontSize="13" 
                                             Foreground="#AAAAAA"
                                             TextWrapping="Wrap"
                                             Margin="0,5,0,8"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="#4CAF50"
                                                CornerRadius="3"
                                                Padding="6,2"
                                                Margin="0,0,8,0">
                                            <TextBlock Text="1.20.1" FontSize="11"/>
                                        </Border>
                                        <Border Background="#FF9800"
                                                CornerRadius="3"
                                                Padding="6,2"
                                                Margin="0,0,8,0">
                                            <TextBlock Text="实用工具" FontSize="11"/>
                                        </Border>
                                        <materialDesign:PackIcon Kind="Download" 
                                                               Width="14" 
                                                               Height="14"
                                                               VerticalAlignment="Center"
                                                               Margin="5,0,3,0"/>
                                        <TextBlock Text="850K" 
                                                 FontSize="12" 
                                                 Foreground="#AAAAAA"
                                                 VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                    <Button Content="下载"
                                          Style="{StaticResource MaterialDesignRaisedButton}"
                                          Width="100"
                                          Background="{StaticResource PrimaryBrush}"
                                          Margin="0,0,0,8"/>
                                    <Button Content="详情"
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          Width="100"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- MOD 项示例 3 -->
                        <Border Background="#2D2D30"
                                Margin="0,0,0,15"
                                CornerRadius="8"
                                Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                        Width="60"
                                        Height="60"
                                        CornerRadius="8"
                                        Background="#3F3F46"
                                        VerticalAlignment="Top">
                                    <materialDesign:PackIcon Kind="Pickaxe"
                                                           Width="35"
                                                           Height="35"
                                                           Foreground="#9C27B0"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" Margin="15,0,15,0">
                                    <TextBlock Text="Applied Energistics 2" 
                                             FontSize="18" 
                                             FontWeight="SemiBold"/>
                                    <TextBlock Text="强大的存储和自动化系统" 
                                             FontSize="13" 
                                             Foreground="#AAAAAA"
                                             TextWrapping="Wrap"
                                             Margin="0,5,0,8"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="#4CAF50"
                                                CornerRadius="3"
                                                Padding="6,2"
                                                Margin="0,0,8,0">
                                            <TextBlock Text="1.19.4" FontSize="11"/>
                                        </Border>
                                        <Border Background="#673AB7"
                                                CornerRadius="3"
                                                Padding="6,2"
                                                Margin="0,0,8,0">
                                            <TextBlock Text="科技" FontSize="11"/>
                                        </Border>
                                        <materialDesign:PackIcon Kind="Download" 
                                                               Width="14" 
                                                               Height="14"
                                                               VerticalAlignment="Center"
                                                               Margin="5,0,3,0"/>
                                        <TextBlock Text="620K" 
                                                 FontSize="12" 
                                                 Foreground="#AAAAAA"
                                                 VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                    <Button Content="下载"
                                          Style="{StaticResource MaterialDesignRaisedButton}"
                                          Width="100"
                                          Background="{StaticResource PrimaryBrush}"
                                          Margin="0,0,0,8"/>
                                    <Button Content="详情"
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          Width="100"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- MOD 项示例 4 -->
                        <Border Background="#2D2D30"
                                Margin="0,0,0,15"
                                CornerRadius="8"
                                Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                        Width="60"
                                        Height="60"
                                        CornerRadius="8"
                                        Background="#3F3F46"
                                        VerticalAlignment="Top">
                                    <materialDesign:PackIcon Kind="Nature"
                                                           Width="35"
                                                           Height="35"
                                                           Foreground="#8BC34A"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" Margin="15,0,15,0">
                                    <TextBlock Text="Biomes O' Plenty" 
                                             FontSize="18" 
                                             FontWeight="SemiBold"/>
                                    <TextBlock Text="添加超过80个全新生物群系" 
                                             FontSize="13" 
                                             Foreground="#AAAAAA"
                                             TextWrapping="Wrap"
                                             Margin="0,5,0,8"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="#4CAF50"
                                                CornerRadius="3"
                                                Padding="6,2"
                                                Margin="0,0,8,0">
                                            <TextBlock Text="1.20.1" FontSize="11"/>
                                        </Border>
                                        <Border Background="#4CAF50"
                                                CornerRadius="3"
                                                Padding="6,2"
                                                Margin="0,0,8,0">
                                            <TextBlock Text="世界生成" FontSize="11"/>
                                        </Border>
                                        <materialDesign:PackIcon Kind="Download" 
                                                               Width="14" 
                                                               Height="14"
                                                               VerticalAlignment="Center"
                                                               Margin="5,0,3,0"/>
                                        <TextBlock Text="780K" 
                                                 FontSize="12" 
                                                 Foreground="#AAAAAA"
                                                 VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                    <Button Content="下载"
                                          Style="{StaticResource MaterialDesignRaisedButton}"
                                          Width="100"
                                          Background="{StaticResource PrimaryBrush}"
                                          Margin="0,0,0,8"/>
                                    <Button Content="详情"
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          Width="100"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>


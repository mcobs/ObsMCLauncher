<Page x:Class="ObsMCLauncher.Pages.ResourcesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      KeepAlive="True"
      Background="{StaticResource BackgroundBrush}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题区域 -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="资源中心" 
                     FontSize="28" 
                     FontWeight="Bold"
                     Margin="0,0,0,10"/>
            <TextBlock Text="下载 MOD、材质包、光影、数据包和整合包" 
                     FontSize="14" 
                     Foreground="#AAAAAA"
                     Margin="0,0,0,25"/>
        </StackPanel>

        <!-- 分类标签页 -->
        <Border Grid.Row="1"
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="10"
                Padding="10"
                Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="ModsTab"
                           Content="MOD"
                           IsChecked="True"
                           Style="{StaticResource MaterialDesignTabRadioButton}"
                           Margin="10,0"
                           Padding="15,10"
                           Click="ResourceTab_Click"
                           Tag="Mods"/>
                <RadioButton x:Name="TexturesTab"
                           Content="材质包"
                           Style="{StaticResource MaterialDesignTabRadioButton}"
                           Margin="10,0"
                           Padding="15,10"
                           Click="ResourceTab_Click"
                           Tag="Textures"/>
                <RadioButton x:Name="ShadersTab"
                           Content="光影"
                           Style="{StaticResource MaterialDesignTabRadioButton}"
                           Margin="10,0"
                           Padding="15,10"
                           Click="ResourceTab_Click"
                           Tag="Shaders"/>
                <RadioButton x:Name="DatapacksTab"
                           Content="数据包"
                           Style="{StaticResource MaterialDesignTabRadioButton}"
                           Margin="10,0"
                           Padding="15,10"
                           Click="ResourceTab_Click"
                           Tag="Datapacks"/>
                <RadioButton x:Name="ModpacksTab"
                           Content="整合包"
                           Style="{StaticResource MaterialDesignTabRadioButton}"
                           Margin="10,0"
                           Padding="15,10"
                           Click="ResourceTab_Click"
                           Tag="Modpacks"/>
            </StackPanel>
        </Border>

        <!-- 内容区域 -->
        <Border Grid.Row="2"
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 搜索和筛选区域 -->
                <Grid Grid.Row="0" Margin="20,20,20,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 下载源选择 -->
                    <ComboBox x:Name="SourceComboBox"
                            Grid.Column="0"
                            Width="140"
                            materialDesign:HintAssist.Hint="下载源"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                            Margin="0,0,15,0"
                            SelectionChanged="SourceComboBox_SelectionChanged">
                        <ComboBoxItem Content="CurseForge" IsSelected="True" Tag="CurseForge"/>
                        <ComboBoxItem Content="Modrinth" Tag="Modrinth" IsEnabled="False"/>
                    </ComboBox>

                    <!-- 搜索框 -->
                    <TextBox x:Name="SearchBox"
                           Grid.Column="1"
                           materialDesign:HintAssist.Hint="搜索资源..."
                           Style="{StaticResource MaterialDesignOutlinedTextBox}"
                           Margin="0,0,15,0"
                           KeyDown="SearchBox_KeyDown"/>

                    <!-- 游戏版本筛选 -->
                    <ComboBox x:Name="VersionFilterComboBox"
                            Grid.Column="2"
                            Width="140"
                            materialDesign:HintAssist.Hint="适用版本"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                            Margin="0,0,15,0"
                            SelectionChanged="FilterChanged">
                        <ComboBoxItem Content="全部版本" IsSelected="True" Tag=""/>
                        <ComboBoxItem Content="1.21.x" Tag="1.21"/>
                        <ComboBoxItem Content="1.20.x" Tag="1.20"/>
                        <ComboBoxItem Content="1.19.x" Tag="1.19"/>
                        <ComboBoxItem Content="1.18.x" Tag="1.18"/>
                        <ComboBoxItem Content="1.16.x" Tag="1.16"/>
                        <ComboBoxItem Content="1.12.x" Tag="1.12"/>
                    </ComboBox>

                    <!-- 排序方式 -->
                    <ComboBox x:Name="SortComboBox"
                            Grid.Column="3"
                            Width="140"
                            materialDesign:HintAssist.Hint="排序方式"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                            Margin="0,0,15,0"
                            SelectionChanged="FilterChanged">
                        <ComboBoxItem Content="最热门" IsSelected="True" Tag="2"/>
                        <ComboBoxItem Content="下载量" Tag="6"/>
                        <ComboBoxItem Content="最新更新" Tag="3"/>
                        <ComboBoxItem Content="名称" Tag="4"/>
                    </ComboBox>

                    <!-- 搜索按钮 -->
                    <Button x:Name="SearchButton"
                          Grid.Column="4"
                          Style="{StaticResource MaterialDesignRaisedButton}"
                          Height="40"
                          Width="90"
                          Content="搜索"
                          Click="SearchButton_Click"
                          Background="{StaticResource PrimaryBrush}"/>
                </Grid>

                <!-- 资源列表 -->
                <Grid Grid.Row="1">
                    <!-- 加载提示 -->
                    <StackPanel x:Name="LoadingIndicator"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="Collapsed">
                        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                   Value="0"
                                   IsIndeterminate="True"
                                   Width="64"
                                   Height="64"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="加载中..."
                                 FontSize="16"
                                 Margin="0,20,0,0"
                                 HorizontalAlignment="Center"
                                 Foreground="{StaticResource TextBrush}"/>
                    </StackPanel>

                    <!-- 空状态提示 -->
                    <StackPanel x:Name="EmptyStatePanel"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="Collapsed">
                        <materialDesign:PackIcon Kind="Magnify"
                                               Width="80"
                                               Height="80"
                                               Foreground="#666666"
                                               HorizontalAlignment="Center"/>
                        <TextBlock Text="输入关键词开始搜索"
                                 FontSize="18"
                                 Margin="0,20,0,0"
                                 HorizontalAlignment="Center"
                                 Foreground="#AAAAAA"/>
                    </StackPanel>

                    <ScrollViewer x:Name="ResourceScrollViewer"
                                 VerticalScrollBarVisibility="Auto"
                                 Visibility="Visible">
                        <StackPanel x:Name="ResourceListPanel" Margin="20,10,20,20">
                        <!-- 动态加载MOD列表 -->
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>

<Page x:Class="ObsMCLauncher.Pages.MorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="更多"
      Background="Transparent"
      UseLayoutRounding="True"
      TextOptions.TextFormattingMode="Display"
      TextOptions.TextRenderingMode="ClearType">

    <Page.Resources>
        <!-- 卡片样式 -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceElevatedBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 链接按钮样式 -->
        <Style x:Key="LinkButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="0,0,12,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 标题样式 -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部导航栏 -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SurfaceElevatedBrush}"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource BorderBrush}"
                Padding="20,12">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <RadioButton x:Name="AboutTab"
                           Content="关于"
                           GroupName="MoreTabs"
                           Style="{StaticResource MaterialDesignTabRadioButton}"
                           Padding="20,8"
                           FontSize="14"
                           IsChecked="True"
                           Checked="Tab_Checked"/>
                
                <RadioButton x:Name="PluginsTab"
                           Content="插件"
                           GroupName="MoreTabs"
                           Style="{StaticResource MaterialDesignTabRadioButton}"
                           Padding="20,8"
                           FontSize="14"
                           Margin="12,0,0,0"
                           Checked="Tab_Checked"/>
            </StackPanel>
        </Border>

        <!-- 内容区域 -->
        <Grid Grid.Row="1">
            <!-- 关于页面 -->
            <ScrollViewer x:Name="AboutContent"
                        VerticalScrollBarVisibility="Auto" 
                        HorizontalScrollBarVisibility="Disabled"
                        Padding="20"
                        Visibility="Visible">
                <StackPanel MaxWidth="800">
            <!-- Logo和标题 -->
            <Border Style="{StaticResource CardBorder}">
                <StackPanel HorizontalAlignment="Center">
                    <!-- Logo SVG -->
                    <svgc:SvgViewbox Source="/Assets/logo.svg" 
                                     Width="140" 
                                     Height="140" 
                                     Margin="0,0,0,24"
                                     Stretch="Uniform"/>

                    <!-- 启动器名称 -->
                    <TextBlock x:Name="AppTitleText"
                             Text="ObsMCLauncher" 
                             FontSize="32" 
                             FontWeight="Bold" 
                             Foreground="{DynamicResource TextBrush}"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,8"
                             Cursor="Hand"
                             MouseLeftButtonDown="AppTitleText_MouseLeftButtonDown"/>
                    
                    <!-- 副标题 -->
                    <TextBlock Text="黑曜石 Minecraft 启动器" 
                             FontSize="16" 
                             Foreground="{DynamicResource TextSecondaryBrush}"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,16"/>
                    
                    <!-- 版本信息 -->
                    <TextBlock x:Name="VersionText"
                             Text="版本 1.0.0"
                             FontSize="14"
                             Foreground="{DynamicResource TextTertiaryBrush}"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,12"/>
                    
                    <!-- 检查更新按钮 -->
                    <Button x:Name="CheckUpdateButton"
                            Click="CheckUpdateButton_Click"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Height="32"
                            Padding="20,0"
                            HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Update" 
                                                   Width="16" 
                                                   Height="16"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="检查更新" VerticalAlignment="Center" FontSize="13"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <!-- 相关链接 -->
            <Border Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="相关链接" Style="{StaticResource SectionTitle}"/>
                    
                    <!-- GitHub链接 -->
                    <Button Style="{StaticResource LinkButton}" Click="OpenGitHub_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔗" FontSize="16" Margin="0,0,8,0"/>
                            <StackPanel>
                                <TextBlock Text="GitHub 开源仓库" FontWeight="SemiBold"/>
                                <TextBlock Text="https://github.com/mcobs/ObsMCLauncher" 
                                         FontSize="12" 
                                         Foreground="{DynamicResource TextTertiaryBrush}"
                                         Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Button>

                    <!-- 黑曜石论坛 -->
                    <Button Style="{StaticResource LinkButton}" Click="OpenForum_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🌐" FontSize="16" Margin="0,0,8,0"/>
                            <StackPanel>
                                <TextBlock Text="黑曜石论坛" FontWeight="SemiBold"/>
                                <TextBlock Text="https://mcobs.cn/" 
                                         FontSize="12" 
                                         Foreground="{DynamicResource TextTertiaryBrush}"
                                         Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <!-- 感谢 -->
            <Border Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="特别感谢" Style="{StaticResource SectionTitle}"/>
                    
                    <!-- bangbang93 -->
                    <Border Background="{DynamicResource SurfaceBrush}" 
                            CornerRadius="6" 
                            Padding="16" 
                            Margin="0,0,0,12">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="💝" FontSize="18" Margin="0,0,8,0"/>
                                <TextBlock Text="bangbang93" 
                                         FontSize="16" 
                                         FontWeight="SemiBold"
                                         Foreground="{DynamicResource TextBrush}"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <TextBlock Text="感谢提供 BMCLAPI 镜像源服务" 
                                     FontSize="14" 
                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                     Margin="26,0,0,12"
                                     TextWrapping="Wrap"/>
                            
                            <Button Style="{StaticResource LinkButton}" 
                                    Click="OpenBangBang93_Click"
                                    Margin="26,0,0,0"
                                    Background="#FF4757">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="❤️" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="爱发电赞助" Foreground="{DynamicResource TextBrush}"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- 图标设计师 -->
                    <Border Background="{DynamicResource SurfaceBrush}" 
                            CornerRadius="6" 
                            Padding="16">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🎨" FontSize="18" Margin="0,0,8,0"/>
                                <TextBlock Text="路过的京局DF7C" 
                                         FontSize="16" 
                                         FontWeight="SemiBold"
                                         Foreground="{DynamicResource TextBrush}"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <TextBlock Text="感谢设计本软件的精美图标" 
                                     FontSize="14" 
                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                     Margin="26,8,0,0"
                                     TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- 关于 -->
            <Border Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="关于" Style="{StaticResource SectionTitle}"/>
                    
                    <TextBlock Text="ObsMCLauncher 是一款现代化的 Minecraft 启动器，采用 .NET 8.0 和 WPF 技术开发，提供流畅的游戏管理体验。" 
                             FontSize="14" 
                             Foreground="{DynamicResource TextSecondaryBrush}"
                             TextWrapping="Wrap"
                             LineHeight="22"
                             Margin="0,0,0,16"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="开源协议：" 
                                 FontSize="14" 
                                 Foreground="{DynamicResource TextTertiaryBrush}"
                                 Width="80"/>
                        <TextBlock Text="MIT License" 
                                 FontSize="14" 
                                 Foreground="{DynamicResource TextBrush}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="技术栈：" 
                                 FontSize="14" 
                                 Foreground="{DynamicResource TextTertiaryBrush}"
                                 Width="80"/>
                        <TextBlock Text=".NET 8.0 | WPF | C#" 
                                 FontSize="14" 
                                 Foreground="{DynamicResource TextBrush}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 免责声明 -->
            <Border Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="⚠️ 免责声明" 
                             Style="{StaticResource SectionTitle}"
                             Foreground="{DynamicResource PrimaryBrush}"/>
                        <!-- 保留黄色强调色 -->
                    
                    <TextBlock FontSize="13" 
                             Foreground="{DynamicResource TextSecondaryBrush}"
                             TextWrapping="Wrap"
                             LineHeight="20">
                        <Run Text="本启动器为第三方工具，与 Mojang Studios 和 Microsoft 无关。"/>
                        <LineBreak/>
                        <Run Text="Minecraft 是 Mojang Studios 的注册商标。"/>
                        <LineBreak/>
                        <Run Text="使用本软件即表示您同意自行承担使用风险。"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- 版权信息 -->
            <TextBlock Text="© 2025 ObsMCLauncher - 使用 ❤️ 和 C# 构建" 
                     FontSize="12" 
                     Foreground="{DynamicResource TextTertiaryBrush}"
                     HorizontalAlignment="Center"
                     Margin="0,8,0,20"/>
                </StackPanel>
            </ScrollViewer>

            <!-- 插件页面 -->
            <ScrollViewer x:Name="PluginsContent"
                        VerticalScrollBarVisibility="Auto" 
                        HorizontalScrollBarVisibility="Disabled"
                        Padding="20"
                        Visibility="Collapsed">
                <StackPanel MaxWidth="800">
                    <!-- 插件管理卡片 -->
                    <Border Style="{StaticResource CardBorder}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- 标题栏 -->
                            <Grid Grid.Row="0" Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="已安装的插件" 
                                         Style="{StaticResource SectionTitle}"
                                         Margin="0"/>

                                <Button Grid.Column="1"
                                      x:Name="RefreshPluginsButton"
                                      Style="{StaticResource MaterialDesignOutlinedButton}"
                                      Height="32"
                                      Padding="12,0"
                                      Click="RefreshPlugins_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Refresh" 
                                                               Width="16" 
                                                               Height="16"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,6,0"/>
                                        <TextBlock Text="刷新" VerticalAlignment="Center" FontSize="13"/>
                                    </StackPanel>
                                </Button>
                            </Grid>

                            <!-- 插件统计 -->
                            <Border Grid.Row="1"
                                  Background="{DynamicResource SurfaceBrush}"
                                  CornerRadius="6"
                                  Padding="16,12"
                                  Margin="0,0,0,16">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Puzzle" 
                                                           Width="20" 
                                                           Height="20"
                                                           VerticalAlignment="Center"
                                                           Foreground="{DynamicResource PrimaryBrush}"
                                                           Margin="0,0,12,0"/>
                                    <TextBlock VerticalAlignment="Center">
                                        <Run Text="共" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <Run x:Name="InstalledPluginCountText" Text="0" FontWeight="Bold" Foreground="{DynamicResource PrimaryBrush}"/>
                                        <Run Text="个插件已安装" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <!-- 插件列表 -->
                            <StackPanel x:Name="PluginListPanel" Grid.Row="2">
                                <!-- 空状态提示 -->
                                <Border x:Name="EmptyPluginsHint"
                                      Background="{DynamicResource SurfaceBrush}"
                                      CornerRadius="8"
                                      Padding="40"
                                      HorizontalAlignment="Center">
                                    <StackPanel HorizontalAlignment="Center">
                                        <materialDesign:PackIcon Kind="PuzzleOutline" 
                                                               Width="64" 
                                                               Height="64"
                                                               Foreground="{DynamicResource TextTertiaryBrush}"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,0,0,16"/>
                                        <TextBlock Text="暂无已安装的插件" 
                                                 FontSize="16"
                                                 Foreground="{DynamicResource TextSecondaryBrush}"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="从插件市场安装插件来扩展启动器功能" 
                                                 FontSize="13"
                                                 Foreground="{DynamicResource TextTertiaryBrush}"
                                                 HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- 插件市场卡片 -->
                    <Border Style="{StaticResource CardBorder}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- 标题栏 -->
                            <Grid Grid.Row="0" Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="插件市场" 
                                         Style="{StaticResource SectionTitle}"
                                         Margin="0"/>

                                <Button Grid.Column="1"
                                      x:Name="RefreshMarketButton"
                                      Style="{StaticResource MaterialDesignOutlinedButton}"
                                      Height="32"
                                      Padding="12,0"
                                      Click="RefreshMarket_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Refresh" 
                                                               Width="16" 
                                                               Height="16"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,6,0"/>
                                        <TextBlock Text="刷新" VerticalAlignment="Center" FontSize="13"/>
                                    </StackPanel>
                                </Button>
                            </Grid>

                            <!-- 搜索和筛选 -->
                            <Grid Grid.Row="1" Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 搜索框 -->
                                <TextBox x:Name="MarketSearchBox"
                                       materialDesign:HintAssist.Hint="搜索插件..."
                                       materialDesign:HintAssist.FloatingScale="0.75"
                                       Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                       MinHeight="40"
                                       FontSize="14"
                                       Padding="12,8"
                                       VerticalAlignment="Stretch"
                                       VerticalContentAlignment="Center"
                                       TextChanged="MarketSearchBox_TextChanged"/>

                                <!-- 分类筛选 -->
                                <ComboBox x:Name="CategoryFilterCombo"
                                        Grid.Column="1"
                                        Width="150"
                                        MinHeight="40"
                                        FontSize="14"
                                        Padding="12,8"
                                        Margin="12,0,0,0"
                                        VerticalAlignment="Stretch"
                                        VerticalContentAlignment="Center"
                                        Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                        materialDesign:HintAssist.Hint="分类"
                                        materialDesign:HintAssist.FloatingScale="0.75"
                                        DisplayMemberPath="Name"
                                        SelectionChanged="CategoryFilter_SelectionChanged">
                                    <ComboBox.ItemContainerStyle>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Padding" Value="12,8"/>
                                            <Setter Property="MinHeight" Value="40"/>
                                            <Setter Property="FontSize" Value="14"/>
                                        </Style>
                                    </ComboBox.ItemContainerStyle>
                                </ComboBox>
                            </Grid>

                            <!-- 加载状态 -->
                            <Border x:Name="MarketLoadingIndicator"
                                  Grid.Row="2"
                                  Background="{DynamicResource SurfaceBrush}"
                                  CornerRadius="6"
                                  Padding="24"
                                  Margin="0,0,0,16"
                                  Visibility="Collapsed">
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                               IsIndeterminate="True"
                                               Width="32"
                                               Height="32"
                                               Margin="0,0,12,0"/>
                                    <TextBlock Text="正在加载插件市场..." 
                                             FontSize="14"
                                             Foreground="{DynamicResource TextSecondaryBrush}"
                                             VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- 错误提示 -->
                            <Border x:Name="MarketErrorHint"
                                  Grid.Row="2"
                                  Background="{DynamicResource SurfaceBrush}"
                                  CornerRadius="6"
                                  Padding="24"
                                  Margin="0,0,0,16"
                                  Visibility="Collapsed">
                                <StackPanel HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="AlertCircleOutline" 
                                                           Width="48" 
                                                           Height="48"
                                                           Foreground="#FF4757"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,0,0,12"/>
                                    <TextBlock x:Name="MarketErrorText"
                                             Text="无法连接到插件市场" 
                                             FontSize="15"
                                             Foreground="{DynamicResource TextSecondaryBrush}"
                                             HorizontalAlignment="Center"
                                             Margin="0,0,0,8"/>
                                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                          Height="32"
                                          Padding="16,0"
                                          Click="RefreshMarket_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Refresh" 
                                                                   Width="16" 
                                                                   Height="16"
                                                                   VerticalAlignment="Center"
                                                                   Margin="0,0,6,0"/>
                                            <TextBlock Text="重试" VerticalAlignment="Center" FontSize="13"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Border>

                            <!-- 空状态提示 -->
                            <Border x:Name="MarketEmptyHint"
                                  Grid.Row="2"
                                  Background="{DynamicResource SurfaceBrush}"
                                  CornerRadius="6"
                                  Padding="24"
                                  Margin="0,0,0,16"
                                  Visibility="Collapsed">
                                <StackPanel HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="Magnify" 
                                                           Width="48" 
                                                           Height="48"
                                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,0,0,12"/>
                                    <TextBlock Text="没有找到匹配的插件" 
                                             FontSize="15"
                                             Foreground="{DynamicResource TextSecondaryBrush}"
                                             HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- 插件列表 -->
                            <ScrollViewer Grid.Row="3"
                                        VerticalScrollBarVisibility="Auto"
                                        HorizontalScrollBarVisibility="Disabled"
                                        MaxHeight="600">
                                <ItemsControl x:Name="MarketPluginsList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <!-- 这里会动态生成插件卡片 -->
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <!-- 插件开发说明 -->
                    <Border Style="{StaticResource CardBorder}">
                        <StackPanel>
                            <TextBlock Text="💡 开发插件" Style="{StaticResource SectionTitle}"/>
                            
                            <TextBlock FontSize="14" 
                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                     TextWrapping="Wrap"
                                     LineHeight="22"
                                     Margin="0,0,0,12">
                                <Run Text="ObsMCLauncher 支持使用 .NET 程序集开发插件。"/>
                                <LineBreak/>
                                <Run Text="您可以通过实现插件接口来扩展启动器的功能。"/>
                            </TextBlock>

                            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                  Height="36"
                                  Padding="16,0"
                                  HorizontalAlignment="Left"
                                  Click="OpenPluginDocs_Click">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="BookOpenPageVariant" 
                                                           Width="18" 
                                                           Height="18"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,8,0"/>
                                    <TextBlock Text="查看插件开发文档" VerticalAlignment="Center" FontSize="13"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>

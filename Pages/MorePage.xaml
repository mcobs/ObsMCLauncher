<Page x:Class="ObsMCLauncher.Pages.MorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="更多"
      Background="Transparent">

    <Page.Resources>
        <!-- 卡片样式 -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceElevatedBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 链接按钮样式 -->
        <Style x:Key="LinkButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="0,0,12,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 标题样式 -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="20">
        <StackPanel MaxWidth="800">
            <!-- Logo和标题 -->
            <Border Style="{StaticResource CardBorder}">
                <StackPanel HorizontalAlignment="Center">
                    <!-- Logo SVG -->
                    <svgc:SvgViewbox Source="/Assets/logo.svg" 
                                     Width="140" 
                                     Height="140" 
                                     Margin="0,0,0,24"
                                     Stretch="Uniform"/>

                    <!-- 启动器名称 -->
                    <TextBlock Text="ObsMCLauncher" 
                             FontSize="32" 
                             FontWeight="Bold" 
                             Foreground="{DynamicResource TextBrush}"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,8"/>
                    
                    <!-- 副标题 -->
                    <TextBlock Text="黑曜石 Minecraft 启动器" 
                             FontSize="16" 
                             Foreground="{DynamicResource TextSecondaryBrush}"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,16"/>
                    
                    <!-- 版本信息 -->
                    <TextBlock x:Name="VersionText"
                             Text="版本 1.0.0"
                             FontSize="14"
                             Foreground="{DynamicResource TextTertiaryBrush}"
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- 相关链接 -->
            <Border Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="相关链接" Style="{StaticResource SectionTitle}"/>
                    
                    <!-- GitHub链接 -->
                    <Button Style="{StaticResource LinkButton}" Click="OpenGitHub_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔗" FontSize="16" Margin="0,0,8,0"/>
                            <StackPanel>
                                <TextBlock Text="GitHub 开源仓库" FontWeight="SemiBold"/>
                                <TextBlock Text="https://github.com/mcobs/ObsMCLauncher" 
                                         FontSize="12" 
                                         Foreground="{DynamicResource TextTertiaryBrush}"
                                         Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Button>

                    <!-- 黑曜石论坛 -->
                    <Button Style="{StaticResource LinkButton}" Click="OpenForum_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🌐" FontSize="16" Margin="0,0,8,0"/>
                            <StackPanel>
                                <TextBlock Text="黑曜石论坛" FontWeight="SemiBold"/>
                                <TextBlock Text="https://mcobs.cn/" 
                                         FontSize="12" 
                                         Foreground="{DynamicResource TextTertiaryBrush}"
                                         Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <!-- 感谢 -->
            <Border Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="特别感谢" Style="{StaticResource SectionTitle}"/>
                    
                    <!-- bangbang93 -->
                    <Border Background="{DynamicResource SurfaceBrush}" 
                            CornerRadius="6" 
                            Padding="16" 
                            Margin="0,0,0,12">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="💝" FontSize="18" Margin="0,0,8,0"/>
                                <TextBlock Text="bangbang93" 
                                         FontSize="16" 
                                         FontWeight="SemiBold"
                                         Foreground="{DynamicResource TextBrush}"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <TextBlock Text="感谢提供 BMCLAPI 镜像源服务" 
                                     FontSize="14" 
                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                     Margin="26,0,0,12"
                                     TextWrapping="Wrap"/>
                            
                            <Button Style="{StaticResource LinkButton}" 
                                    Click="OpenBangBang93_Click"
                                    Margin="26,0,0,0"
                                    Background="#FF4757">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="❤️" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="爱发电赞助" Foreground="{DynamicResource TextBrush}"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- 图标设计师 -->
                    <Border Background="{DynamicResource SurfaceBrush}" 
                            CornerRadius="6" 
                            Padding="16">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🎨" FontSize="18" Margin="0,0,8,0"/>
                                <TextBlock Text="路过的京局DF7C" 
                                         FontSize="16" 
                                         FontWeight="SemiBold"
                                         Foreground="{DynamicResource TextBrush}"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <TextBlock Text="感谢设计本软件的精美图标" 
                                     FontSize="14" 
                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                     Margin="26,8,0,0"
                                     TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- 关于 -->
            <Border Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="关于" Style="{StaticResource SectionTitle}"/>
                    
                    <TextBlock Text="ObsMCLauncher 是一款现代化的 Minecraft 启动器，采用 .NET 8.0 和 WPF 技术开发，提供流畅的游戏管理体验。" 
                             FontSize="14" 
                             Foreground="{DynamicResource TextSecondaryBrush}"
                             TextWrapping="Wrap"
                             LineHeight="22"
                             Margin="0,0,0,16"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="开源协议：" 
                                 FontSize="14" 
                                 Foreground="{DynamicResource TextTertiaryBrush}"
                                 Width="80"/>
                        <TextBlock Text="MIT License" 
                                 FontSize="14" 
                                 Foreground="{DynamicResource TextBrush}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="技术栈：" 
                                 FontSize="14" 
                                 Foreground="{DynamicResource TextTertiaryBrush}"
                                 Width="80"/>
                        <TextBlock Text=".NET 8.0 | WPF | C#" 
                                 FontSize="14" 
                                 Foreground="{DynamicResource TextBrush}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 免责声明 -->
            <Border Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="⚠️ 免责声明" 
                             Style="{StaticResource SectionTitle}"
                             Foreground="{DynamicResource PrimaryBrush}"/>
                        <!-- 保留黄色强调色 -->
                    
                    <TextBlock FontSize="13" 
                             Foreground="{DynamicResource TextSecondaryBrush}"
                             TextWrapping="Wrap"
                             LineHeight="20">
                        <Run Text="本启动器为第三方工具，与 Mojang Studios 和 Microsoft 无关。"/>
                        <LineBreak/>
                        <Run Text="Minecraft 是 Mojang Studios 的注册商标。"/>
                        <LineBreak/>
                        <Run Text="使用本软件即表示您同意自行承担使用风险。"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- 版权信息 -->
            <TextBlock Text="© 2025 ObsMCLauncher - 使用 ❤️ 和 C# 构建" 
                     FontSize="12" 
                     Foreground="{DynamicResource TextTertiaryBrush}"
                     HorizontalAlignment="Center"
                     Margin="0,8,0,20"/>
        </StackPanel>
    </ScrollViewer>
</Page>

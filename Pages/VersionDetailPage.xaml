<Page x:Class="ObsMCLauncher.Pages.VersionDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      KeepAlive="True"
      Background="{DynamicResource BackgroundBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 返回按钮和标题 -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <Button x:Name="BackButton"
                      Click="BackButton_Click"
                      Style="{StaticResource MaterialDesignFlatButton}"
                      HorizontalAlignment="Left"
                      Padding="5"
                      Margin="-5,0,0,15">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ArrowLeft" 
                                               Width="20" 
                                               Height="20"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"/>
                        <TextBlock Text="返回版本列表" 
                                 VerticalAlignment="Center"
                                 FontSize="14"/>
                    </StackPanel>
                </Button>

                <TextBlock x:Name="VersionTitle"
                         Text="Minecraft 1.20.4" 
                         FontSize="28" 
                         FontWeight="Bold"
                         Margin="0,0,0,10"/>
                <TextBlock Text="配置版本信息和加载器选项" 
                         FontSize="14" 
                         Foreground="{DynamicResource TextSecondaryBrush}"/>
            </StackPanel>

            <!-- 版本信息卡片 -->
            <Border Grid.Row="1"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="10"
                    Padding="25"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="版本信息" 
                             FontSize="18" 
                             FontWeight="SemiBold"
                             Margin="0,0,0,20"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 版本号 -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,15">
                            <TextBlock Text="版本号" 
                                     FontSize="13" 
                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                     Margin="0,0,0,5"/>
                            <TextBlock x:Name="VersionNumber"
                                     Text="1.20.4" 
                                     FontSize="16" 
                                     FontWeight="SemiBold"/>
                        </StackPanel>

                        <!-- 发布日期 -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,15">
                            <TextBlock Text="发布日期" 
                                     FontSize="13" 
                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                     Margin="0,0,0,5"/>
                            <TextBlock x:Name="ReleaseDate"
                                     Text="2023-12-07" 
                                     FontSize="16" 
                                     FontWeight="SemiBold"/>
                        </StackPanel>

                        <!-- 版本类型 -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,15">
                            <TextBlock Text="版本类型" 
                                     FontSize="13" 
                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                     Margin="0,0,0,5"/>
                            <Border x:Name="VersionTypeBorder"
                                  Background="{StaticResource PrimaryBrush}"
                                  CornerRadius="4"
                                  Padding="8,4"
                                  HorizontalAlignment="Left">
                                <TextBlock x:Name="VersionTypeBadge"
                                         Text="正式版" 
                                         FontSize="13" 
                                         FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>

                        <!-- 下载大小 -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,15">
                            <TextBlock Text="下载大小" 
                                     FontSize="13" 
                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                     Margin="0,0,0,5"/>
                            <TextBlock x:Name="DownloadSize"
                                     Text="计算中..." 
                                     FontSize="16" 
                                     FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <!-- 版本名称编辑 -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,5,0,0">
                            <TextBlock Text="安装名称" 
                                     FontSize="13" 
                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                     Margin="0,0,0,5"/>
                            <TextBox x:Name="VersionNameTextBox"
                                   materialDesign:HintAssist.Hint="自定义版本名称"
                                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                   FontSize="14"
                                   TextChanged="VersionNameTextBox_TextChanged">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                            <TextBlock FontSize="11" 
                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                     Margin="0,5,0,0">
                                <Run Text="提示：版本将安装到 "/>
                                <Run Text=".minecraft/versions/" FontWeight="SemiBold"/>
                                <Run x:Name="VersionNamePreview" Text="Minecraft-1.20.4" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryBrush}"/>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- 加载器选择 -->
            <Border x:Name="LoaderSelectionPanel"
                    Grid.Row="2"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="10"
                    Padding="25"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="加载器选择" 
                             FontSize="18" 
                             FontWeight="SemiBold"
                             Margin="0,0,0,10"/>
                    <TextBlock Text="选择要安装的加载器（仅能选择一个，不选则安装原版）" 
                             FontSize="13" 
                             Foreground="{DynamicResource TextSecondaryBrush}"
                             Margin="0,0,0,20"/>

                    <!-- 原版 -->
                    <RadioButton x:Name="VanillaRadio"
                               IsChecked="True"
                               GroupName="LoaderGroup"
                               Style="{StaticResource MaterialDesignRadioButton}"
                               Margin="0,0,0,10"
                               Checked="LoaderRadio_Checked">
                        <Border Background="{StaticResource SurfaceElevatedBrush}"
                              CornerRadius="6"
                              Padding="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Image x:Name="VanillaIcon"
                                       Grid.Column="0"
                                       Width="24"
                                       Height="24"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"
                                       Source="/Assets/LoaderIcons/vanilla.png"/>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="原版（Vanilla）" 
                                             FontSize="14" 
                                             FontWeight="SemiBold"
                                             Margin="0,0,0,2"/>
                                    <TextBlock Text="Mojang 官方版本，不包含任何修改" 
                                             FontSize="12" 
                                             Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </RadioButton>

                    <!-- Forge -->
                    <RadioButton x:Name="ForgeRadio"
                               GroupName="LoaderGroup"
                               Style="{StaticResource MaterialDesignRadioButton}"
                               Margin="0,0,0,10"
                               Checked="LoaderRadio_Checked">
                        <Border Background="{StaticResource SurfaceElevatedBrush}"
                              CornerRadius="6"
                              Padding="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Image Grid.Column="0"
                                       Width="24"
                                       Height="24"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"
                                       Source="/Assets/LoaderIcons/forge.png"/>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Forge" 
                                             FontSize="14" 
                                             FontWeight="SemiBold"
                                             Margin="0,0,0,2"/>
                                    <TextBlock Text="最流行的 MOD 加载器，支持大量经典 MOD" 
                                             FontSize="12" 
                                             Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>

                                <ComboBox x:Name="ForgeVersionComboBox"
                                        Grid.Column="2"
                                        Width="160"
                                        IsEnabled="False"
                                        FontSize="12"
                                        Margin="10,0,0,0"
                                        SelectionChanged="LoaderVersionComboBox_SelectionChanged"
                                        materialDesign:HintAssist.Hint="选择版本"
                                        Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                </ComboBox>
                            </Grid>
                        </Border>
                    </RadioButton>

                    <!-- NeoForge -->
                    <RadioButton x:Name="NeoForgeRadio"
                               GroupName="LoaderGroup"
                               Style="{StaticResource MaterialDesignRadioButton}"
                               Margin="0,0,0,10"
                               Checked="LoaderRadio_Checked">
                        <Border Background="{StaticResource SurfaceElevatedBrush}"
                              CornerRadius="6"
                              Padding="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Image Grid.Column="0"
                                       Width="24"
                                       Height="24"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"
                                       Source="/Assets/LoaderIcons/neoforged.png"/>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="NeoForge" 
                                             FontSize="14" 
                                             FontWeight="SemiBold"
                                             Margin="0,0,0,2"/>
                                    <TextBlock Text="Forge 的现代化分支，兼容性更好，性能更优" 
                                             FontSize="12" 
                                             Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>

                                <ComboBox x:Name="NeoForgeVersionComboBox"
                                        Grid.Column="2"
                                        Width="160"
                                        IsEnabled="False"
                                        FontSize="12"
                                        Margin="10,0,0,0"
                                        SelectionChanged="LoaderVersionComboBox_SelectionChanged"
                                        materialDesign:HintAssist.Hint="选择版本"
                                        Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                </ComboBox>
                            </Grid>
                        </Border>
                    </RadioButton>

                    <!-- Fabric -->
                    <RadioButton x:Name="FabricRadio"
                               GroupName="LoaderGroup"
                               Style="{StaticResource MaterialDesignRadioButton}"
                               Margin="0,0,0,10"
                               Checked="LoaderRadio_Checked">
                        <Border Background="{StaticResource SurfaceElevatedBrush}"
                              CornerRadius="6"
                              Padding="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Image Grid.Column="0"
                                       Width="24"
                                       Height="24"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"
                                       Source="/Assets/LoaderIcons/fabric.png"/>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Fabric" 
                                             FontSize="14" 
                                             FontWeight="SemiBold"
                                             Margin="0,0,0,2"/>
                                    <TextBlock Text="轻量级 MOD 加载器，更新快，性能优秀" 
                                             FontSize="12" 
                                             Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>

                                <ComboBox x:Name="FabricVersionComboBox"
                                        Grid.Column="2"
                                        Width="160"
                                        IsEnabled="False"
                                        FontSize="12"
                                        Margin="10,0,0,0"
                                        SelectionChanged="LoaderVersionComboBox_SelectionChanged"
                                        materialDesign:HintAssist.Hint="选择版本"
                                        Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                </ComboBox>
                            </Grid>
                        </Border>
                    </RadioButton>

                    <!-- OptiFine (可与Forge一起使用) -->
                    <CheckBox x:Name="OptiFineCheckBox"
                               Style="{StaticResource MaterialDesignCheckBox}"
                               Margin="0,0,0,10"
                               Checked="OptiFineCheckBox_CheckedChanged"
                               Unchecked="OptiFineCheckBox_CheckedChanged">
                        <Border Background="{StaticResource SurfaceElevatedBrush}"
                              CornerRadius="6"
                              Padding="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Image Grid.Column="0"
                                       Width="24"
                                       Height="24"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"
                                       Source="/Assets/LoaderIcons/optifine.png"/>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="OptiFine" 
                                             FontSize="14" 
                                             FontWeight="SemiBold"
                                             Margin="0,0,0,2"/>
                                    <TextBlock x:Name="OptiFineDescriptionText"
                                             Text="性能优化 MOD，支持光影和高清材质" 
                                             FontSize="12" 
                                             Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>

                                <ComboBox x:Name="OptiFineVersionComboBox"
                                        Grid.Column="2"
                                        Width="160"
                                        IsEnabled="False"
                                        FontSize="12"
                                        Margin="10,0,0,0"
                                        SelectionChanged="LoaderVersionComboBox_SelectionChanged"
                                        materialDesign:HintAssist.Hint="选择版本"
                                        Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                </ComboBox>
                            </Grid>
                        </Border>
                    </CheckBox>

                    <!-- Quilt -->
                    <RadioButton x:Name="QuiltRadio"
                               GroupName="LoaderGroup"
                               Style="{StaticResource MaterialDesignRadioButton}"
                               Margin="0,0,0,0"
                               Checked="LoaderRadio_Checked">
                        <Border Background="{StaticResource SurfaceElevatedBrush}"
                              CornerRadius="6"
                              Padding="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Image Grid.Column="0"
                                       Width="24"
                                       Height="24"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"
                                       Source="/Assets/LoaderIcons/quilt.png"/>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Quilt" 
                                             FontSize="14" 
                                             FontWeight="SemiBold"
                                             Margin="0,0,0,2"/>
                                    <TextBlock Text="基于 Fabric 的下一代 MOD 加载器" 
                                             FontSize="12" 
                                             Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>

                                <ComboBox x:Name="QuiltVersionComboBox"
                                        Grid.Column="2"
                                        Width="160"
                                        IsEnabled="False"
                                        FontSize="12"
                                        Margin="10,0,0,0"
                                        SelectionChanged="LoaderVersionComboBox_SelectionChanged"
                                        materialDesign:HintAssist.Hint="选择版本"
                                        Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                </ComboBox>
                            </Grid>
                        </Border>
                    </RadioButton>

                </StackPanel>
            </Border>

            <!-- 底部操作按钮 -->
            <Grid Grid.Row="3" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock x:Name="SelectedLoaderText"
                             Text="已选择：原版" 
                             FontSize="14" 
                             FontWeight="SemiBold"/>
                    <TextBlock x:Name="InstallHintText"
                             Text="点击「开始安装」将下载并安装该版本" 
                             FontSize="12" 
                             Foreground="{DynamicResource TextSecondaryBrush}"
                             Margin="0,5,0,0"/>
                    <TextBlock x:Name="DownloadAssetsHintText"
                             FontSize="11" 
                             Foreground="#FFA500"
                             Margin="0,3,0,0"
                             Visibility="Collapsed">
                        <Run Text="✓ "/>
                        <Run Text="已启用完整下载：将下载所有游戏资源（库文件+Assets）"/>
                    </TextBlock>
                </StackPanel>

                <Button Grid.Column="1"
                      x:Name="InstallButton"
                      Content="开始安装"
                      Height="50"
                      Width="180"
                      FontSize="16"
                      Style="{StaticResource MaterialDesignRaisedButton}"
                      materialDesign:ButtonAssist.CornerRadius="8"
                      Background="{StaticResource PrimaryBrush}"
                      Click="InstallButton_Click">
                    <Button.Effect>
                        <DropShadowEffect Color="{Binding Source={StaticResource PrimaryBrush}, Path=Color}" 
                                        BlurRadius="20" 
                                        Opacity="0.3" 
                                        ShadowDepth="0"/>
                    </Button.Effect>
                </Button>
            </Grid>

            <!-- 下载进度面板（覆盖加载器选择区域） -->
            <Border x:Name="DownloadProgressPanel"
                    Grid.Row="2"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="10"
                    Padding="30"
                    Margin="0,0,0,20"
                    Visibility="Collapsed">
                <StackPanel>
                    <!-- 标题 -->
                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel>
                            <TextBlock Text="正在下载版本" 
                                     FontSize="20" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,5"/>
                            <TextBlock x:Name="DownloadVersionText"
                                     Text="Minecraft 1.20.4" 
                                     FontSize="14" 
                                     Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                        
                        <TextBlock x:Name="DownloadOverallPercentageText"
                                 Grid.Column="1"
                                 Text="0%" 
                                 FontSize="32" 
                                 FontWeight="Bold"
                                 Foreground="{DynamicResource PrimaryBrush}"
                                 VerticalAlignment="Center"/>
                    </Grid>

                    <!-- 总进度条 -->
                    <StackPanel Margin="0,0,0,25">
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="总体进度" 
                                     FontSize="14" 
                                     FontWeight="SemiBold"/>
                            <TextBlock x:Name="DownloadOverallStatsText"
                                     Grid.Column="1"
                                     Text="0 / 0 个文件" 
                                     FontSize="13" 
                                     Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </Grid>
                        
                        <ProgressBar x:Name="DownloadOverallProgressBar"
                                   Height="10"
                                   Value="0"
                                   Maximum="100"
                                   Style="{StaticResource MaterialDesignLinearProgressBar}"/>
                    </StackPanel>

                    <!-- 当前文件进度条 -->
                    <StackPanel Margin="0,0,0,20">
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="当前文件" 
                                     FontSize="14" 
                                     FontWeight="SemiBold"/>
                            <TextBlock x:Name="DownloadCurrentPercentageText"
                                     Grid.Column="1"
                                     Text="0%" 
                                     FontSize="13" 
                                     Foreground="{DynamicResource PrimaryBrush}"/>
                        </Grid>
                        
                        <ProgressBar x:Name="DownloadCurrentProgressBar"
                               Height="8"
                               Value="0"
                               Maximum="100"
                               Style="{StaticResource MaterialDesignLinearProgressBar}"/>
                    </StackPanel>

                    <!-- 详细信息 -->
                    <Border Background="{StaticResource SurfaceElevatedBrush}"
                          CornerRadius="8"
                          Padding="20"
                          Margin="0,0,0,20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- 状态 -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                <materialDesign:PackIcon Kind="Information" 
                                                       Width="18" 
                                                       Height="18"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,10,0"
                                                       Foreground="{DynamicResource PrimaryBrush}"/>
                                <TextBlock Text="状态：" 
                                         FontSize="13" 
                                         Foreground="{DynamicResource TextSecondaryBrush}"
                                               VerticalAlignment="Center"
                                         Margin="0,0,5,0"/>
                        <TextBlock x:Name="DownloadStatusText"
                                 Text="准备下载..." 
                                 FontSize="13"
                                         FontWeight="SemiBold"
                                         VerticalAlignment="Center"/>
                    </StackPanel>

                            <!-- 当前文件 -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,12">
                        <materialDesign:PackIcon Kind="File" 
                                                       Width="18" 
                                                       Height="18"
                                               VerticalAlignment="Center"
                                                       Margin="0,0,10,0"
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBlock Text="文件：" 
                                         FontSize="13" 
                                         Foreground="{DynamicResource TextSecondaryBrush}"
                                         VerticalAlignment="Center"
                                         Margin="0,0,5,0"/>
                        <TextBlock x:Name="CurrentFileText"
                                 Text="" 
                                         FontSize="13"
                                         VerticalAlignment="Center"
                                         TextTrimming="CharacterEllipsis"/>
                            </StackPanel>

                            <!-- 下载速度 -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,12">
                                <materialDesign:PackIcon Kind="Speedometer" 
                                                       Width="18" 
                                                       Height="18"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,10,0"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBlock Text="速度：" 
                                         FontSize="13" 
                                         Foreground="{DynamicResource TextSecondaryBrush}"
                                         VerticalAlignment="Center"
                                         Margin="0,0,5,0"/>
                                <TextBlock x:Name="DownloadSpeedText"
                                         Text="0 KB/s" 
                                         FontSize="13"
                                         VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- 已下载/总大小 -->
                            <StackPanel Grid.Row="3" Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="HardDisk" 
                                                       Width="18" 
                                                       Height="18"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,10,0"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBlock Text="大小：" 
                                         FontSize="13" 
                                         Foreground="{DynamicResource TextSecondaryBrush}"
                                         VerticalAlignment="Center"
                                         Margin="0,0,5,0"/>
                                <TextBlock x:Name="DownloadSizeText"
                                         Text="0 MB / 0 MB" 
                                         FontSize="13"
                                         VerticalAlignment="Center"/>
                    </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- 取消按钮 -->
                    <Button x:Name="CancelDownloadButton"
                          Content="取消下载"
                          Height="44"
                          Width="150"
                          FontSize="14"
                          Style="{StaticResource MaterialDesignOutlinedButton}"
                          materialDesign:ButtonAssist.CornerRadius="8"
                          BorderBrush="#DC3545"
                          Foreground="#DC3545"
                          HorizontalAlignment="Center"
                          Click="CancelDownloadButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>

        </Grid>
    </ScrollViewer>
</Page>

